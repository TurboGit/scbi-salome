
function pyqt-tar()
{
    VERSION=$1

    echo none
    echo none
    echo PyQt5_gpl-$VERSION.tar.gz
}

function pyqt-depends()
{
    echo qt
    echo sip
}

function pyqt-env()
{
    PREFIX=$1
    TARGET=$2

    add-to-var PATH $PREFIX/bin
    add-to-var LD_LIBRARY_PATH $PREFIX/lib
    add-to-var PYTHONPATH $PREFIX/lib/python$PYTHON_VERSION/site-packages

    export PYQT5_ROOT_DIR=$PREFIX
    export PYQT_ROOT_DIR=$PREFIX
}

function pyqt-build-env()
{
    PREFIX=$1
    TARGET=$2

    add-to-var PATH $IDIR/bin
}

function pyqt-config()
{
    PREFIX=$1
    TARGET=$2

    python3 configure.py --confirm-license -b $PREFIX/bin \
            -d $PREFIX/lib/python$PYTHON_VERSION/site-packages \
            -v $PREFIX/share/sip \
            --designer-plugindir=$PREFIX/include/python$PYTHON_VERSION \
            --qml-plugindir=$PREFIX/include/python$PYTHON_VERSION \
            --stubsdir=$PREFIX/lib/python$PYTHON_VERSION/site-packages/PyQt5 \
            --sip-incdir=$IDIR/include/python$PYTHON_VERSION
}

function pyqt-build()
{
    PREFIX=$1
    TARGET=$2

    make -j$JOBS
}

function pyqt-install()
{
    PREFIX=$1
    TARGET=$2

    make install
}
