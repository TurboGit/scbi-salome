
function fields-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/modules-salome.med.git
}

function fields-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo fields-$VERSION.tar.gz
}

function fields-build-depends()
{
    echo cmake
    echo sphinx-common
    echo sphinx-intl
}

function fields-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo medcoupling
    echo salome-gui
}

function fields-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var FIELDS_ROOT_DIR    $PREFIX
    add-to-var C_INCLUDE_PATH     $PREFIX/include/salome
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include/salome
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function fields-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_GUI_BUILD_WITH_QT5=ON -DSALOME_BUILD_TESTS=OFF \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE fields Release) \
          ../src
}

function fields-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function fields-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function fields-prefix()
{
    echo NONE
}
