
function cmake-vcs() 
{ 
    echo default
    echo none 
    echo git 
    echo https://github.com/Kitware/CMake.git 
} 


function cmake-build-depends()
{
    echo g++
}

function cmake-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH $SCBI_BDIR/install-tools/bin
}

function cmake-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure --prefix=$PREFIX
}

function cmake-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function cmake-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function cmake-prefix()
{
    echo $SCBI_BDIR/install-tools
}
