
function cmake-vcs() 
{ 
    echo git 
    echo https://github.com/Kitware/CMake.git 
} 


function cmake-out-of-tree()
{
    echo true
}

function cmake-env()
{
    PREFIX=$1
    TARGET=$2

    export PATH=$BDIR/install-tools/bin:$PATH
}

function cmake-config()
{
    PREFIX=$1
    TARGET=$2

    ../src/configure --prefix=$PREFIX
}

function cmake-build()
{
    PREFIX=$1
    TARGET=$2

    make -j$JOBS
}

function cmake-install()
{
    PREFIX=$1
    TARGET=$2

    make install
}

function cmake-prefix()
{
    echo $BDIR/install-tools
}
