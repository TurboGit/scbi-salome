
function s-yacsgen-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/yacsgen
}

function s-yacsgen-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/yacsgen
}

function s-yacsgen-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo none
    echo yacsgen-$VERSION.tar.xz
}

function s-yacsgen-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    YACSGEN_ROOT_DIR $PREFIX
    add-to-var PATH             $PREFIX/script
    add-to-var PYTHONPATH       $PREFIX/module_generator
}

function s-yacsgen-install()
{
    local PREFIX=$1
    local TARGET=$2

    # there is no installation for this tool, yet we do copy all
    # sources into install directory which seems cleaner.

    cd ..
    rsync -a --delete src/. install
}

function s-yacsgen-post-install()
{
    local PREFIX=$1
    local TARGET=$2

    sed -i "s#__YACSGEN_INSTALL_PATH__#${BDIR/install}#" \
        $PREFIX/Examples/exec.sh
}
