
function hybrid-plugin-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/hybridplugin
}

function hybrid-plugin-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/hybridplugin
}

function hybrid-plugin-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/modules
    echo HYBRIDPLUGIN_SRC_$VERSION.tgz
}

function hybrid-plugin-build-depends()
{
    echo s-cmake-tool
    echo os@-sphinx-common
}

function hybrid-plugin-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo smesh
}

function hybrid-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var HYBRIDPLUGIN_ROOT_DIR $PREFIX
}

function hybrid-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_GUI_BUILD_WITH_QT5=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE hybrid-plugin Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} \
          ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"} \
          ../src
}

function hybrid-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function hybrid-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function hybrid-plugin-prefix()
{
    echo NONE
}
