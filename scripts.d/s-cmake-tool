inherit-plugin s-cmake

with-variant native os@-cmake

#  Adds a Windows variant using the MingW64 cmake version
with-variant win \
  --env 'add-to-var PATH $(cygpath -c -s "c:\opt\msys64\mingw64\bin")'

function s-cmake-tool-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/Kitware/CMake.git
}

function s-cmake-tool-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo cmake-$VERSION.tar.gz
}

function s-cmake-tool-build-depends()
{
    echo os@-g++
    echo os@-make
    echo os@-openssl-dev
}
