
function ghs3d-plugin-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/ghs3dplugin
}

function ghs3d-plugin-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo GHS3DPLUGIN_SRC_$VERSION.tgz
}

function ghs3d-plugin-build-depends()
{
    echo cmake
    echo sphinx-common
}

function ghs3d-plugin-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo smesh
}

function ghs3d-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var GHS3DPLUGIN_ROOT_DIR $PREFIX
}

function ghs3d-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_GUI_BUILD_WITH_QT5=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE ghs3d-plugin Release) \
          ../src
}

function ghs3d-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function ghs3d-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function ghs3d-plugin-prefix()
{
    echo NONE
}
