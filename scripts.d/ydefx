
function ydefx-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/ydefx
}

function ydefx-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo ydefx-$VERSION.tar.xz
}

function ydefx-build-depends()
{
    echo os@-cmake
    echo py2cpp
}

function ydefx-depends()
{
    echo salome-configuration
    echo os@-qt5-default

    echo salome-kernel
    echo yacs
}

function ydefx-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var YDEFX_ROOT_DIR    $PREFIX
    add-to-var CMAKE_PREFIX_PATH $PREFIX/salome_adm/cmake_files
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib/
    add-to-var PYTHONPATH        \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function ydefx-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE ydefx Release) \
          ../src
}

function ydefx-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function ydefx-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function ydefx-prefix()
{
    echo NONE
}
