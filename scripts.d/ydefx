
function ydefx-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/salome-prototypes.ydefx
}

function ydefx-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo ydefx-$VERSION.tar.xz
}

function ydefx-build-depends()
{
    echo cmake
    echo py2cpp
}

function ydefx-depends()
{
    echo salome-configuration
    echo qt
}

function ydefx-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var YDEFX_ROOT_DIR    $PREFIX
    add-to-var CMAKE_PREFIX_PATH $PREFIX/lib/cmake/ydefx
}

function ydefx-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE ydefx Release) \
          ../src
}

function ydefx-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function ydefx-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function ydefx-prefix()
{
    echo NONE
}
