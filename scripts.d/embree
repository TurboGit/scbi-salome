
function embree-vcs() 
{ 
    echo default
    echo none 
    echo git 
    echo https://github.com/embree/embree.git 
} 


function embree-build-depends()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo cmake
    echo ispc
    echo s-clang
}

function embree-depends()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo libc6-dev
    echo libtbb-dev
    echo libglfw3-dev
}

function embree-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CMAKE_PREFIX_PATH \
               $(last-modified-directory "$PREFIX/lib/cmake/embree-*")
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
}

function embree-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_C_COMPILER=clang-${SCBI_CLANG_VERSION} \
          -DCMAKE_CXX_COMPILER=clang++ ../src
}

function embree-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function embree-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function embree-prefix()
{
    echo NONE
}
