
function embree-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/embree/embree.git
}

function embree-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo embree-$VERSION.tar.gz
}

function embree-depends()
{
    local VERSION=$1

    echo cmake
    echo libc6-dev
    echo libtbb-dev
    echo libglfw3-dev
    echo ispc
}

function embree-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CMAKE_PREFIX_PATH \
               $(last-modified-directory "$PREFIX/lib/cmake/embree-*")
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
}

function embree-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DCMAKE_CXX_COMPILER=clang++-4.0 ../src
}

function embree-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function embree-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function embree-prefix()
{
    echo NONE
}
