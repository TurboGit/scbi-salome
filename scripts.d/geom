
function geom-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/geom
}

function geom-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/geom
}

function geom-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo geom-$VERSION.tar.xz
}

function geom-build-depends()
{
    echo s-cmake-tool
    echo os@-sphinx-common
    echo os@-swig
    echo os@-python3-psutil
}

function geom-depends()
{
    echo s-omniorb
    echo os@-qt5-default

    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo s-python-omniorb
}

function geom-opencv-depends()
{
    echo s-opencv
}

function geom-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var GEOM_ROOT_DIR $PREFIX
}

function geom-default-config-options()
{
    echo -DSALOME_GEOM_USE_OPENCV=OFF
}

function geom-opencv-config-options()
{
    echo -DSALOME_GEOM_USE_OPENCV=ON
}

function geom-common-config-options()
{
    local CDEBUG=$(is-enabled cmake-debug)

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"}
    echo -DSALOME_GUI_BUILD_WITH_QT5=ON
    echo -DSWIG_EXECUTABLE:PATH=$(command -v swig)
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE geom Release)
}

function geom-config()
{
    local PREFIX=$1
    local TARGET=$2

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS ../src
}

function geom-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function geom-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function geom-prefix()
{
    echo NONE
}
