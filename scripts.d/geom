

function geom-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo geom-$VERSION.tar.xz 
} 

function geom-depends()
{
    echo libopencv-dev

    echo cmake
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo omniorb
    echo python-omniorb
    echo qt
}

function geom-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var GEOM_ROOT_DIR $PREFIX
}

function geom-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF \
          -DSALOME_GEOM_USE_OPENCV=ON  \
          -DSWIG_EXECUTABLE:PATH=$(which swig3.0) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE geom Release) \
          ../src
}

function geom-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function geom-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function geom-prefix()
{
    echo NONE
}
