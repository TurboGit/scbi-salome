
# IntelÂ® Open Volume Kernel Library

function s-openvkl-vcs()
{
    echo default
    echo no-recursive
    echo git
    echo https://github.com/openvkl/openvkl.git
}


function s-openvkl-build-depends()
{
    echo s-cmake
    echo s-ispc
    echo s-clang
}

function s-openvkl-depends()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo s-embree
    echo s-rkcommon
}

function s-openvkl-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    OPENVKL_ROOT_DIR   $PREFIX
    set-var    OPENVKL_BUILD_DIR  $PREFIX/../build

    add-to-var C_INCLUDE_PATH     $PREFIX/include/openvkl
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include/openvkl
    add-to-var LIBRARY_PATH       $PREFIX/lib
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
    add-to-var CMAKE_PREFIX_PATH \
               $(last-modified-directory "$PREFIX/lib*/cmake/openvkl-*")
}

function s-openvkl-config-options()
{
    local PREFIX=$1
    local TARGET=$2

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
    echo -DCMAKE_INSTALL_NAME_DIR:PATH=$PREFIX/lib
    echo -DCMAKE_INSTALL_LIBDIR:STRING=lib
    echo -DCMAKE_INSTALL_INCLUDEDIR:STRING=include
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release)
    echo -DBUILD_TESTING=OFF
    echo -DBUILD_EXAMPLES=OFF
    echo -DCMAKE_C_COMPILER=clang-${SCBI_CLANG_VERSION}
    echo -DCMAKE_CXX_COMPILER=clang++
}

function s-openvkl-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS=()
    get-config-options OPTIONS $PREFIX $TARGET $VARIANT

    cmake "${OPTIONS[@]}" ../src
}

function s-openvkl-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-openvkl-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-openvkl-prefix()
{
    echo NONE
}
