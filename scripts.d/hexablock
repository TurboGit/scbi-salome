
function hexablock-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/hexablock
}

function hexablock-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo HEXABLOCK_SRC_$VERSION.tgz
}

function hexablock-patches()
{
    echo hexablock950_sci10.patch
}

function hexablock-build-depends()
{
    echo s-cmake-tool
    echo os@-python3-sphinx
    echo os@-python3-sphinx-rtd-theme
    echo os@-swig
    echo os@-graphviz-dev
    echo os@-doxygen
    echo os@-python3-docutils
    echo salome-configuration
}

function hexablock-depends()
{
    echo os@-qt5-default
    echo os@-qtbase5-dev

    echo geom
}

function hexablock-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5
    add-to-var QT5_ROOT_DIR       /usr

    add-to-var HEXABLOCK_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function hexablock-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_TESTS=OFF \
          -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE hexablock Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function hexablock-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function hexablock-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function hexablock-prefix()
{
    echo NONE
}
