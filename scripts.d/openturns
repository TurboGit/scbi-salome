
function openturns-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/openturns/openturns.git
}

function openturns-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo openturns-$VERSION.tar.bz2
}

function openturns-build-depends()
{
    echo cmake
    echo libxml2-utils
}

function openturns-depends()
{
    echo libblas-dev
    echo liblapack-dev
    echo python3
    echo python3-dev
    echo libbz2-dev
    echo python3-matplotlib
    echo python3-numpy
    # since 1.13
    echo libcminpack-dev
}

function openturns-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CMAKE_PREFIX_PATH $PREFIX/lib/cmake
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PYTHONPATH        \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/
    add-to-var OPENTURNS_HOME    $PREFIX
}

function openturns-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DUSE_SPHINX=OFF \
          -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          ../src
}

function openturns-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function openturns-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function openturns-prefix()
{
    echo NONE
}
