
function openturns-vcs() 
{ 
    echo git 
    echo https://github.com/openturns/openturns.git 
} 


function openturns-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CMAKE_PREFIX_PATH $PREFIX/lib/cmake
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PYTHONPATH        \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/openturns
    add-to-var OPENTURNS_HOME    $PREFIX
}

function openturns-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DUSE_SPHINX=OFF -DCMAKE_INSTALL_PREFIX=$PREFIX ../src
}

function openturns-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function openturns-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function openturns-prefix()
{
    echo NONE
}
