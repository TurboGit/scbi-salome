
function openturns-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/openturns/openturns.git
}

function openturns-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo openturns-$VERSION.tar.bz2
}

function openturns-build-depends()
{
    echo cmake
}

function openturns-depends()
{
    echo libblas-dev
    echo liblapack-dev
    echo libpython2.7-dev
    echo python-matplotlib
    echo python-numpy
    echo python-scipy
    # since 1.13
    echo libcminpack-dev
}

function openturns-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CMAKE_PREFIX_PATH        $PREFIX/lib/cmake
    add-to-var LD_LIBRARY_PATH          $PREFIX/lib
    add-to-var C_INCLUDE_PATH           $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH       $PREFIX/include
    add-to-var OPENTURNS_HOME           $PREFIX
    add-to-var PYTHONPATH        \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/openturns
}

function openturns-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DUSE_SPHINX=OFF -DCMAKE_INSTALL_PREFIX=$PREFIX ../src
}

function openturns-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function openturns-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function openturns-prefix()
{
    echo NONE
}
