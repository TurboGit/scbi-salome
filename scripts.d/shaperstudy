
function shaperstudy-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/shaper_study
}

function shaperstudy-build-depends()
{
    echo os@-cmake
}

function shaperstudy-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo geom
    echo shaper
}

function shaperstudy-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var SHAPERSTUDY_ROOT_DIR $PREFIX
}

function shaperstudy-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE shaper Release) \
          ../src
}

function shaperstudy-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function shaperstudy-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function shaperstudy-prefix()
{
    echo NONE
}
