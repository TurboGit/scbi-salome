

function adao-interface-build-depends()
{
    echo s-cmake-tool
    echo py2cpp
}

function adao-interface-depends()
{
    echo salome-configuration
    echo adao
}

function adao-interface-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var ADAO_INTERFACE_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH         $PREFIX/lib
    add-to-var PYTHONPATH              \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function adao-interface-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CURRENT_SOFTWARE_INSTALL_DIR $PREFIX
    add-to-var SPHINX_ROOT_DIR              /usr
}

function adao-interface-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE adao Release) \
          -DPY2CPP_ROOT_DIR=$PY2CPP_ROOT_DIR \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          ../src
}

function adao-interface-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function adao-interface-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function adao-interface-prefix()
{
    echo NONE
}
