
function salome-gui-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/gui
}

function salome-gui-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo salome-gui-$VERSION.tar.xz
}

function salome-gui-build-depends()
{
    echo s-cmake-tool
    echo os@-sphinx-common
    echo os@-sphinx-intl
}

function salome-gui-depends()
{
    echo os@-qt5-default
    echo qtbase5-dev
    echo os@-python3-pyqt5
    echo pyqt5-dev
    echo pyqt5-dev-tools
    echo os@-qwt-qt5-dev
    echo os@-python3-sip-dev
    echo os@-python3-sip
    echo os@-qt5opengl5-dev
    echo os@-qt5printsupport5

    echo salome-configuration
    echo paraview
    echo salome-kernel
    echo occt

    echo s-hdf5
}

function salome-gui-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5 & PyQt5
    add-to-var QT5_ROOT_DIR       /usr
    add-to-var PYQT5_ROOT_DIR     /usr

    add-to-var GUI_ROOT_DIR       $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
    add-to-var CMAKE_PREFIX_PATH  $PREFIX/adm_local/cmake_files
}

function salome-gui-mpi-config-options()
{
    echo -DSALOME_USE_MPI=ON
}

function salome-gui-common-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
    echo -DSALOME_BUILD_TESTS=OFF
    echo -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE salome-gui Release)
    echo ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"}
    echo ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"}
}

function salome-gui-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS -DSALOME_USE_MPI=ON ../src
}

function salome-gui-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function salome-gui-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function salome-gui-prefix()
{
    echo NONE
}
