
function salome-gui-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/gui
}

function salome-gui-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo salome-gui-$VERSION.tar.xz
}

function salome-gui-build-depends()
{
    echo cmake
    echo sphinx-common
    echo sphinx-intl
}

function salome-gui-depends()
{
    echo qt5-default
    echo qtbase5-dev
    echo python3-pyqt5
    echo pyqt5-dev
    echo pyqt5-dev-tools
    echo libqwt-qt5-dev
    echo python3-sip-dev
    echo python3-sip
    echo libqt5opengl5-dev
    echo libqt5printsupport5

    echo salome-configuration
    echo paraview
    echo salome-kernel
    echo occt

    echo s-hdf5
}

function salome-gui-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5 & PyQt5
    add-to-var QT5_ROOT_DIR       /usr
    add-to-var PYQT5_ROOT_DIR     /usr

    add-to-var GUI_ROOT_DIR       $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
    add-to-var CMAKE_PREFIX_PATH  $PREFIX/adm_local/cmake_files
}

function salome-gui-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_TESTS=OFF \
          -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE salome-gui Release) \
          ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"} \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function salome-gui-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function salome-gui-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function salome-gui-prefix()
{
    echo NONE
}
