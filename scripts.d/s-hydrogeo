

function s-hydrogeo-common-build-depends()
{
    echo s-cmake
}

function s-hydrogeo-default-build-depends()
{
    echo os@-python3-setuptools
}

function s-hydrogeo-ng-build-depends()
{
    echo s-salome-bin
}

function s-hydrogeo-common-depends()
{
    echo s-salome-configuration
    echo s-proj
}

function s-hydrogeo-default-depends()
{
    echo s-qt
    echo s-cgns
    echo s-gdal
    echo s-salome-gui
    echo s-geom
    echo s-tbb
    echo s-occt
    echo s-python
}

function s-hydrogeo-ng-depends()
{
    echo s-libecw2
}

function s-hydrogeo-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    HYDROGEO_ROOT_DIR $PREFIX
    set-var    HYDRO_ROOT_DIR    $PREFIX
    set-var    HYDRO_DIR         $PREFIX
    set-var    HYDRORes          $PREFIX/share/salome/resources/hydro

    add-to-var PATH              $PREFIX/bin/salome
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib/salome
    add-to-var PYTHONPATH      \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
    add-to-var PYTHONPATH        $PREFIX/lib/salome

    add-to-var SalomeAppConfig   $PREFIX/share/salome/resources/hydro
    add-to-var SALOME_MODULES    HYDRO
}

function s-hydrogeo-ctest-dir()
{
    local PREFIX=$1

    echo $PREFIX/bin/salome/test
}

function s-hydrogeo-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX ../src
}

function s-hydrogeo-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-hydrogeo-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-hydrogeo-post-install()
{
    local PREFIX=$1
    local TARGET=$2

    cp $PREFIX/share/salome/resources/hydro/LightApp.xml \
       $PREFIX/share/salome/resources/hydro/SalomeAppSL.xml
}

function s-hydrogeo-prefix()
{
    echo NONE
}
