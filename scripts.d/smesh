

function smesh-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo smesh-$VERSION.tar.xz 
} 

function smesh-build-depends()
{
    echo os@-cmake
    echo os@-sphinx-common
    echo os@-sphinx-intl
}

function smesh-depends()
{
    echo os@-qt5-default
    echo os@-omniorb

    echo s-hdf5
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo shaperstudy
    echo medfichier
    echo medcoupling
    echo s-python-omniorb
}

function smesh-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var SMESH_ROOT_DIR  $PREFIX
    add-to-var LD_LIBRARY_PATH $PREFIX/lib/salome
    add-to-var PYTHONPATH      \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
    add-to-var PYTHONPATH      \
               $PREFIX/share/salome/plugins/smesh/Verima
}

function smesh-mpi-options()
{
    echo -DSALOME_USE_MPI=ON
}

function smesh-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
    echo -DSALOME_GUI_BUILD_WITH_QT5=ON
    echo -DSALOME_SMESH_USE_CGNS=ON
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE smesh Release)

    apply-variant-options $PREFIX $TARGET $VARIANT
}

function smesh-config()
{
    local PREFIX=$1
    local TARGET=$2

    local OPTIONS="$(smesh-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS ../src
}

function smesh-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function smesh-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function smesh-prefix()
{
    echo NONE
}
