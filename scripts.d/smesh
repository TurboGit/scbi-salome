
function smesh-vcs()
{
    echo git
    echo https://git.forge.pleiade.edf.fr/git/modules-salome.smesh
}

function smesh-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo smesh-$VERSION.tar.xz
}

function smesh-depends()
{
    echo cmake
    echo configuration
    echo kernel
    echo gui
    echo qt
    echo hdf5
    echo omniorb
    echo python-omniorb
    echo geom
    echo medfichier
}

function smesh-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var SMESH_ROOT_DIR $PREFIX
}

function smesh-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function smesh-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function smesh-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function smesh-prefix()
{
    echo NONE
}
