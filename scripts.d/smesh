

function smesh-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo smesh-$VERSION.tar.xz 
} 

function smesh-depends()
{
    echo cmake
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo qt
    echo hdf5
    echo omniorb
    echo python-omniorb
    echo geom
    echo medfichier
}

function smesh-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var SMESH_ROOT_DIR  $PREFIX
    add-to-var LD_LIBRARY_PATH $PREFIX/lib/salome
    add-to-var PYTHONPATH      \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function smesh-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF -DSALOME_GUI_BUILD_WITH_QT5=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE smesh Release) \
          ../src
}

function smesh-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function smesh-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function smesh-prefix()
{
    echo NONE
}
