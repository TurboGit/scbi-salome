
function s-python-omniorb-vcs() 
{ 
    echo default
    echo none 
    echo svn 
    echo https://svn.code.sf.net/p/omniorb/svn/trunk/omniORBpy 
} 


function s-python-omniorb-depends()
{
    echo omniorb
}

function s-python-omniorb-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var OMNIORB_ROOT_DIR   /usr
    add-to-var LD_LIBRARY_PATH    /usr/lib

    add-to-var OMNIORBPY_ROOT_DIR $PREFIX
    add-to-var PYTHONPATH         $PREFIX/lib/python$PYTHON_VERSION/site-packages
    add-to-var PYTHONPATH         \
	$PREFIX/lib/python$PYTHON_VERSION/site-packages/omniidl_be
}

function s-python-omniorb-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure --prefix=$PREFIX --with-omniorb=$OMNIORB_ROOT_DIR \
                     PYTHON=$(which python3)
}

function s-python-omniorb-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-python-omniorb-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-python-omniorb-prefix()
{
    echo NONE
}
