
function melidefx-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/salome-prototypes.melidefx 
}

function melidefx-build-depends()
{
    echo cmake
    echo salome-configuration
}

function melidefx-depends()
{
    echo salome-kernel
    echo yacs
    echo python3
    echo melissa
    echo py2cpp
    echo ydefx
}

function melidefx-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var MELIDEFX_ROOT_DIR       $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function melidefx-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCONFIGURATION_ROOT_DIR=$CONFIGURATION_ROOT_DIR \
          -DCMAKE_PREFIX_PATH=$KERNEL_ROOT_DIR/salome_adm/cmake_files \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE melidefx Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function melidefx-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function melidefx-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function melidefx-prefix()
{
    echo NONE
}
