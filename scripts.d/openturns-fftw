
function openturns-fftw-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo otfftw-$VERSION.tar.bz2
}

function openturns-fftw-build-depends()
{
    echo s-cmake-tool
    echo os@-swig
    echo os@-python3-sphinx
}

function openturns-fftw-depends()
{
    echo openturns
    echo os@-python3
    echo os@-fftw3-dev
}

function openturns-fftw-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PYTHONPATH        \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/
    add-to-var OTFFTW_HOME    $PREFIX
}

function openturns-fftw-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DUSE_SPHINX=OFF \
          -DBUILD_DOC=OFF \
          -DPYTHON_EXECUTABLE=$(command -v python$PYTHON_VERSION) \
          -DCMAKE_FIND_ROOT_PATH=ON \
          -DSWIG_EXECUTABLE:PATH=$(command -v swig) \
          -DSWIG_DIR:FILEPATH=$(swig -swiglib) \
          -DSPHINX_ROOT_DIR:FILEPATH=$(get-os-bin-dir sphinx-build) \
          -DSPHINX_EXECUTABLE:FILEPATH=$(get-os-bin sphinx-build) \
          -DCMAKE_SKIP_INSTALL_RPATH:BOOL=ON \
          -DCMAKE_INSTALL_PREFIX=$PREFIX \
          ../src
}

function openturns-fftw-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function openturns-fftw-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function openturns-fftw-prefix()
{
    echo NONE
}
