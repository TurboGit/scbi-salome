
function gui-vcs()
{
    echo git
    echo https://git.forge.pleiade.edf.fr/git/modules-salome.gui
}

function gui-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo gui-$VERSION.tar.xz
}

function gui-depends()
{
    echo cmake
    echo qt
    echo pyqt
    echo configuration
    echo paraview
    echo kernel
    echo libqwt-qt5-dev
    echo occt
}

function gui-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var GUI_ROOT_DIR       $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function gui-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON \
          -DSALOME_BUILD_WITH_QT5=ON \
          -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function gui-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function gui-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function gui-prefix()
{
    echo NONE
}
