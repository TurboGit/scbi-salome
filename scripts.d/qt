
# Note that OpenGL support is needed here as required by PyQt
# later. We note them here as the real support depends on the
# hardware.
#
# apt install libgles2-mesa-dev
# apt install libglu1-mesa-dev
# apt install mesa-common-dev

function qt-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/qt/qt5.git
}

function qt-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo qt-everywhere-opensource-src-$VERSION.tar.xz
}

function qt-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var QT5_ROOT_DIR $PREFIX
    add-to-var CMAKE_PREFIX_PATH $PREFIX/lib/cmake

    add-to-var PATH                        $PREFIX/bin
    add-to-var LD_LIBRARY_PATH             $PREFIX/lib
    add-to-var C_INCLUDE_PATH              $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH          $PREFIX/include
    add-to-var QT_PLUGIN_PATH              $PREFIX/plugins
    add-to-var QT_QPA_PLATFORM_PLUGIN_PATH $PREFIX/plugins/platforms
}

function qt-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH $PREFIX/bin
}

function qt-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure --prefix=$PREFIX -opensource -confirm-license \
                     -no-rpath -skip qtwebengine -qt-xcb
}

function qt-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function qt-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function qt-prefix()
{
    echo NONE
}
