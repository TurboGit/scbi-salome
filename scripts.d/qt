
function qt-vcs() 
{ 
    echo git 
    echo https://github.com/qt/qt5.git 
} 


function qt-out-of-tree()
{
    echo true
}

function qt-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var QT5_ROOT_DIR $PREFIX
    add-to-var CMAKE_PREFIX_PATH $PREFIX/lib/cmake

    add-to-var PATH $PREFIX/bin
    add-to-var LD_LIBRARY_PATH $PREFIX/lib
    add-to-var C_INCLUDE_PATH $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include
}

function qt-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH $PREFIX/bin
}

function qt-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure --prefix=$PREFIX -opensource -confirm-license \
                     -no-rpath -skip qtwebengine -qt-xcb
}

function qt-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function qt-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function qt-prefix()
{
    echo NONE
}
