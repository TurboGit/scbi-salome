
function qt-vcs()
{
    echo git
    echo https://github.com/qt/qt5.git
}

function qt-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo qt-everywhere-opensource-src-$VERSION.tar.xz
}

function qt-out-of-tree()
{
    echo true
}

function qt-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var QT5_ROOT_DIR $IDIR

    add-to-var PATH $IDIR/bin
    add-to-var LD_LIBRARY_PATH $IDIR/lib
}

function qt-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH $IDIR/bin
}

function qt-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure --prefix=$PREFIX -opensource -confirm-license \
                     -no-rpath -skip qtwebengine -qt-xcb
}

function qt-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function qt-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
