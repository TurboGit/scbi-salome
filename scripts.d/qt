
function qt-vcs()
{
    echo git
    echo https://github.com/qt/qt5.git
}

function qt-tar()
{
    VERSION=$1

    echo none
    echo none
    echo qt-everywhere-opensource-src-$VERSION.tar.xz
}

function qt-out-of-tree()
{
    echo true
}

function qt-env()
{
    PREFIX=$1
    TARGET=$2

    export QT5_ROOT_DIR=$IDIR

    add-to-var PATH $IDIR/bin
    add-to-var LD_LIBRARY_PATH $IDIR/lib
}

function qt-build-env()
{
    PREFIX=$1
    TARGET=$2

    add-to-var PATH $IDIR/bin
}

function qt-config()
{
    PREFIX=$1
    TARGET=$2

    ../src/configure --prefix=$PREFIX -opensource -confirm-license \
                     -no-rpath -skip qtwebengine -qt-xcb
}

function qt-build()
{
    PREFIX=$1
    TARGET=$2

    make -j$JOBS
}

function qt-install()
{
    PREFIX=$1
    TARGET=$2

    make install
}
