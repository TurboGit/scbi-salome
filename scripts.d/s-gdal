
function s-gdal-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/OSGeo/gdal.git
}

function s-gdal-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo gdal-$VERSION.tar.gz
}

function s-gdal-build-depends()
{
    echo cmake
}

function s-gdal-out-of-tree()
{
    echo false
}

function s-gdal-depends()
{
    echo libproj-dev
    echo s-netcdf
    echo hdf5
}

function s-gdal-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var GDAL_ROOT_DIR      $PREFIX
    add-to-var C_INCLUDE_PATH     $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include
    add-to-var LIBRARY_PATH       $PREFIX/lib
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
}

function s-gdal-config()
{
    local PREFIX=$1
    local TARGET=$2

    cd ../src/gdal
    ./autogen.sh &&
        ./configure -with-netcdf=$NETCDF_ROOT_DIR \
                    --with-hdf5=$HDF5_ROOT_DIR --prefix=$PREFIX
}

function s-gdal-build()
{
    local PREFIX=$1
    local TARGET=$2

    cd ../src/gdal
    make -j$SCBI_JOBS
}

function s-gdal-install()
{
    local PREFIX=$1
    local TARGET=$2

    cd ../src/gdal
    make install
}

function s-gdal-prefix()
{
    echo NONE
}
