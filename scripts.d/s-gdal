
with-variant native os@-gdal-dev:[v] s-hdf5 s-netcdf os@-proj-dev \
             --env 'set-var GDAL_ROOT_DIR    /usr' \
                   'set-var GDAL_INCLUDE_DIR /usr/include/gdal' \
                   'set-var GDAL_LIBRARY     /usr/lib'

function s-gdal-vcs()
{
    echo default
    echo none
    echo git
    echo https://github.com/OSGeo/gdal.git
}


function s-gdal-archive()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo ftp://ftp.cea.fr/pub/salome/prerequisites
    echo gdal-$VERSION.tar.gz
}

function s-gdal-out-of-tree()
{
    echo true
}

function s-gdal-mingw-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3
    local KIND=$4
    local REF=$5

    # Fix gcc compilation and exposure of DLLs with add_dll_directory
    echo gdal-3.2.2.msys2.patch
}

function s-gdal-build-depends()
{
    echo s-cmake
}

function s-gdal-common-depends()
{
    echo os@-geos-dev
    echo os@-json-c-dev
    echo os@-cfitsio-dev
    echo os@-freexl-dev
    echo os@-postgresql
    echo os@-sfcgal-dev

    echo s-proj
    echo s-netcdf
    echo s-hdf5
    echo s-swig
}

function s-gdal-mingw-depends()
{
    echo os@-crypto++
    echo os@-geos
}

function s-gdal-common-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    GDAL_ROOT_DIR      $PREFIX
    set-var    GDAL_INCLUDE_DIR   $PREFIX/include
    set-var    GDAL_LIBRARY       $PREFIX/lib

    add-to-var C_INCLUDE_PATH     $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include
    add-to-var LIBRARY_PATH       $PREFIX/lib
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
}

function s-gdal-mingw-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH $PREFIX/lib
    add-to-var PATH $PREFIX/bin
}

function s-gdal-config-options()
{
    local PREFIX=$1
    local TARGET=$2

    echo -DCMAKE_BUILD_TYPE=Release
    echo -DCMAKE_INSTALL_PREFIX:STRING=${PREFIX}
    echo -DCMAKE_INSTALL_LIBDIR:STRING=lib
    echo -DCMAKE_INSTALL_NAME_DIR:PATH=${PREFIX}/lib
    echo -DGDAL_USE_EXTERNAL_LIBS:BOOL=OFF
    echo -DGDAL_USE_INTERNAL_LIBS:BOOL=OFF
    echo -DGDAL_USE_CURL:BOOL=ON
    echo -DGDAL_USE_LIBXML2:BOOL=ON
    echo -DGDAL_USE_EXPAT:BOOL=ON
    echo -DGDAL_USE_ZLIB:BOOL=ON
    echo -DGDAL_USE_HDF5:BOOL=ON
    echo -DGDAL_USE_ICONV:BOOL=ON
    echo -DGDAL_USE_OPENSSL:BOOL=ON
    echo -DGDAL_USE_SQLITE3:BOOL=ON
    echo -DGDAL_BUILD_OPTIONAL_DRIVERS:BOOL=OFF
    echo -DGDAL_ENABLE_DRIVER_HDF5:BOOL=ON
    echo -DOGR_ENABLE_DRIVER_DGN:BOOL=OFF
    echo -DOGR_ENABLE_DRIVER_IDRISI:BOOL=OFF
    echo -DOGR_ENABLE_DRIVER_SDTS:BOOL=OFF
    echo -DOGR_ENABLE_DRIVER_S57:BOOL=OFF
    echo -DBUILD_APPS:BOOL=OFF
    echo -DBUILD_CSHARP_BINDINGS:BOOL=OFF
    echo -DBUILD_JAVA_BINDINGS:BOOL=OFF
    echo -DBUILD_PYTHON_BINDINGS:BOOL=ON
    echo -DBUILD_TESTING:BOOL=OFF
    echo -DCMAKE_INSTALL_RPATH:STRING=${PREFIX}/lib
    echo -DGDAL_USE_ZSTD:BOOL=ON
    echo -DGDAL_USE_PCRE2:BOOL=ON
    echo -DGDAL_USE_GEOS:BOOL=ON
    echo -DGDAL_USE_NETCDF:BOOL=ON
    echo -DGDAL_USE_LIBLZMA:BOOL=ON
    echo -DGDAL_USE_GEOTIFF_INTERNAL:BOOL=ON
    echo -DGDAL_USE_JPEG_INTERNAL:BOOL=ON
    echo -DGDAL_USE_PNG_INTERNAL:BOOL=ON
    echo -DGDAL_USE_TIFF_INTERNAL:BOOL=ON
    echo -DGDAL_USE_GIF_INTERNAL:BOOL=ON
    echo -DGDAL_USE_JSONC_INTERNAL:BOOL=ON
    echo -DGDAL_USE_BLOSC_INTERNAL:BOOL=ON
}

function s-gdal-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS=()
    get-config-options OPTIONS $PREFIX $TARGET $VARIANT

    cmake "${OPTIONS[@]}" ../src
}

function s-gdal-mingw-config()
{
    local PREFIX=$1
    local TARGET=$2
    local PYTHONBIN=$(which python)

    CONFIGURE_FLAGS=""
    CONFIGURE_FLAGS+=" --with-pcraster=internal"
    CONFIGURE_FLAGS+=" --with-png=internal"
    CONFIGURE_FLAGS+=" --with-libtiff=internal"
    CONFIGURE_FLAGS+=" --with-geotiff=internal"
    CONFIGURE_FLAGS+=" --with-jpeg=internal"
    CONFIGURE_FLAGS+=" --with-gif=internal"
    CONFIGURE_FLAGS+=" --with-python=yes"
    CONFIGURE_FLAGS+=" --with-geos=yes"
    CONFIGURE_FLAGS+=" --with-sqlite3=yes"
    CONFIGURE_FLAGS+=" --with-threads"
    CONFIGURE_FLAGS+=" --with-python=${PYTHONBIN}"
    CONFIGURE_FLAGS+=" --with-hdf5=${HDF5_ROOT_DIR}"
    CONFIGURE_FLAGS+=" --with-netcdf=${NETCDF_ROOT_DIR}"
    CONFIGURE_FLAGS+=" --without-jasper"

    ./configure \
	--prefix=$PREFIX \
	--host=$TARGET \
	${CONFIGURE_FLAGS} \
	LDFLAGS="-L${HDF5_ROOT_DIR}/lib/ -lhdf5 -lhdf5_hl -L${NETCDF_ROOT_DIR}/lib -lnetcdf" \
	HDF5_CFLAGS="-I${HDF5_ROOT_DIR}/include -L${HDF5_ROOT_DIR}/lib/ -lhdf5 -lhdf5_hl" \
	LIBS="-L${HDF5_ROOT_DIR}/lib/ -lhdf5 -lhdf5_hl -L${NETCDF_ROOT_DIR}/lib -lnetcdf" \
	HDF5_LIBS="-L${HDF5_ROOT_DIR}/lib/ -lhdf5  -lhdf5_hl " \
	HDF5_INCLUDE="-I${HDF5_ROOT_DIR}/include"
}

function s-gdal-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-gdal-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-gdal-prefix()
{
    echo NONE
}
