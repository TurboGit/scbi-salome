

function shaper-depends()
{
    echo doxygen
    echo sphinx-common

    echo cmake
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo planegcs
    echo qt
    echo occt
}

function shaper-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var SHAPER_ROOT_DIR $PREFIX
}

function shaper-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE shaper Release) \
          -DADD_MODELS_TESTS=TRUE \
          ../src
}

function shaper-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function shaper-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function shaper-prefix()
{
    echo NONE
}
