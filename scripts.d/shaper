

function shaper-depends()
{
    echo doxygen

    echo cmake
    echo configuration
    echo kernel
    echo gui
    echo geom
    echo planegcs
    echo qt
    echo occt
}

function shaper-env()
{
    export SHAPER_ROOT_DIR=$IDIR
}

function shaper-out-of-tree()
{
    echo true
}

function shaper-config()
{
    local PREFIX=$1
    local TARGET=$2

    # ??? Even with SHAPER_BUILD_DOC=OFF we need doxygen to be installed

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=Release \
          -DADD_MODELS_TESTS=TRUE \
          -DSHAPER_BUILD_DOC=OFF \
          ../src
}

function shaper-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function shaper-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
