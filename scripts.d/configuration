
function configuration-vcs()
{
    echo git
    echo https://git.forge.pleiade.edf.fr/git/tools-salome.configuration
}

function configuration-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo configuration-$VERSION.tar.xz
}

function configuration-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CONFIGURATION_ROOT_DIR $BDIR/install-tools
    add-to-var CONFIGURATION_CMAKE_DIR $BDIR/install-tools/cmake

    add-to-var CMAKE_MODULE_PATH $CONFIGURATION_CMAKE_DIR
}

function configuration-install()
{
    local PREFIX=$1
    local TARGET=$2

    # this is no installation for this tool, yet we do copy all
    # sources into install directory which seems cleaner.

    cd ..
    rsync -a --delete src/. install
}

function configuration-prefix()
{
    local PREFIX=$1
    local TARGET=$2

    echo $BDIR/install-tools
}
