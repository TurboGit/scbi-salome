
function libbatch-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/tools-salome.libbatch
}

function libbatch-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/tools
    echo libBatch-$VERSION.tar.gz
}

function libbatch-depends()
{
    echo salome-configuration
}

function libbatch-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var LibBatch_DIR    $PREFIX
    add-to-var LD_LIBRARY_PATH $PREFIX/lib
}

function libbatch-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DADAO_PYTHON_MODULE=OFF \
          -DSWIG_EXECUTABLE:PATH=$(which swig3.0) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE libbatch Release) \
          ../src
}

function libbatch-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function libbatch-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function libbatch-prefix()
{
    echo NONE
}
