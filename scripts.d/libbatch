


function libbatch-build-depends()
{
    echo s-cmake-tool
    echo os@-swig
}

function libbatch-depends()
{
    echo os@-python3-dev
    echo salome-configuration
}

function libbatch-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var LibBatch_DIR    $PREFIX
    add-to-var LD_LIBRARY_PATH $PREFIX/lib
}

function libbatch-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DADAO_PYTHON_MODULE=OFF \
          -DSWIG_EXECUTABLE:PATH=$(command -v swig) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE libbatch Release) \
          ../src
}

function libbatch-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function libbatch-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function libbatch-prefix()
{
    echo NONE
}
