

function s-planegcs-cea-tar() 
{ 
    local VERSION=$1 
 
    echo default
    echo wget 
    echo ftp://anonymous@ftp.cea.fr/pub/salome/prerequisites 
    echo planegcs-$VERSION.tar.gz 
} 

function s-planegcs-build-depends()
{
    echo s-cmake
}

function s-planegcs-depends()
{
    echo os@-boost-graph-dev
    echo s-eigen
}

function s-planegcs-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PLANEGCS_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
}

function s-planegcs-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release) \
          ../src
}

function s-planegcs-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-planegcs-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-planegcs-prefix()
{
    echo NONE
}
