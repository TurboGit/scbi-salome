

function hybridplugin-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo hybridplugin-$VERSION.tar.xz 
} 

function hybridplugin-depends()
{
    echo cmake
    echo configuration
    echo kernel
    echo gui
    echo geom
    echo smesh
}

function hybridplugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var HYBRIDPLUGIN_ROOT_DIR $PREFIX
}

function hybridplugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function hybridplugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function hybridplugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function hybridplugin-prefix()
{
    echo NONE
}
