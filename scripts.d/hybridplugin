
function hybridplugin-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git//plugins-salome.hybridplugin
}

function hybridplugin-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo hybridplugin-$VERSION.tar.xz
}

function hybridplugin-depends()
{
    echo cmake
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo smesh
}

function hybridplugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var HYBRIDPLUGIN_ROOT_DIR $PREFIX
}

function hybridplugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_GUI_BUILD_WITH_QT5=ON \
          -DSALOME_BUILD_DOC=OFF \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE hybridplugin Release) \
          ../src
}

function hybridplugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function hybridplugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function hybridplugin-prefix()
{
    echo NONE
}
