


function hexotic-plugin-build-depends()
{
    echo cmake
}

function hexotic-plugin-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo smesh
    echo meshgems
}

function hexotic-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var HEXOTIC-PLUGIN_ROOT_DIR $PREFIX
}

function hexotic-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE hexotic-plugin Release) \
          ../src
}

function hexotic-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function hexotic-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function hexotic-plugin-prefix()
{
    echo NONE
}
