
function s-hexablock-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/hexablock
}

function s-hexablock-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/hexablock
}

function s-hexablock-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/modules
    echo HEXABLOCK_SRC_$VERSION.tgz
}

function s-hexablock-patches()
{
    echo hexablock950_sci10.patch
}

function s-hexablock-build-depends()
{
    echo s-cmake-tool
    echo os@-python3-sphinx
    echo os@-python3-sphinx-rtd-theme
    echo os@-swig
    echo os@-graphviz-dev
    echo os@-doxygen
    echo os@-python3-docutils
    echo s-salome-configuration
}

function s-hexablock-depends()
{
    echo os@-qt5-default
    echo os@-qtbase5-dev

    echo s-geom
}

function s-hexablock-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5
    add-to-var QT5_ROOT_DIR       /usr

    add-to-var HEXABLOCK_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function s-hexablock-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_TESTS=OFF \
          -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE hexablock Release) \
          ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"} \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} \
          ../src
}

function s-hexablock-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-hexablock-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-hexablock-prefix()
{
    echo NONE
}
