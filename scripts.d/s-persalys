

function s-persalys-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo persalys-$VERSION.tar.xz 
} 

function s-persalys-common-build-depends()
{
    echo s-cmake
    echo os@-boost-locale-dev
    echo os@-swig
}

function s-persalys-default-build-depends()
{
    echo s-py2cpp
}

function s-persalys-common-depends()
{
    echo s-salome-configuration
    # And other modules not part of binary installation
    echo s-openturns
    echo s-openturns-morris
    echo s-ydefx
}

function s-persalys-default-depends()
{
    echo s-salome-gui
    echo s-salome-kernel
    echo s-yacs
    echo s-adao
    echo s-adao-interface
}

function s-persalys-linux-depends()
{
    echo s-salome-bin
}

function s-persalys-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PERSALYS_ROOT_DIR $PREFIX
    add-to-var PYTHONPATH        $PREFIX/lib/python$PYTHON_VERSION/site-packages
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PATH              $PREFIX/bin

    add-to-var PERSALYS_HTML_DOCUMENTATION_PATH $PREFIX/share/persalys/doc/html
    add-to-var OTGUI_HTML_DOCUMENTATION_PATH    $PREFIX/share/otgui/doc/html
    add-to-var PV_PLUGIN_PATH                   $PREFIX/lib
}

function s-persalys-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE s-persalys Release)
    echo -DPYTHON_EXECUTABLE=$(command -v python$PYTHON_VERSION)
    echo -DUSE_SALOME=ON
    echo -DAdaoCppLayer_INCLUDE_DIR=$ADAO_INTERFACE_ROOT_DIR/include
    echo -DAdaoCppLayer_ROOT_DIR=$ADAO_INTERFACE_ROOT_DIR
}

function s-persalys-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake ${OPTIONS} ../src
}

function s-persalys-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-persalys-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-persalys-prefix()
{
    echo NONE
}
