
OS_V=$(lsb_release -r | cut -d':' -f2)

SCBI_PROXY_PORT=3128

[[ $OS_V =~ 11 ]] && SCBI_PROXY_PORT=3131

function proxy-edf()
{
    export http_proxy=http://vip-users.proxy.edf.fr:$SCBI_PROXY_PORT
    export https_proxy=http://vip-users.proxy.edf.fr:$SCBI_PROXY_PORT
    export no_proxy=localhost,.edf.fr,127.0.0.1
}

[[ -f ${SCBI_ENV_DIR}/.env-ng-shared-defs ]] &&
    source ${SCBI_ENV_DIR}/.env-ng-shared-defs

SCBI_EXTRA_NG_MODULES="s-salome-kernel:s-salome-gui:s-geom:s-smesh:s-shaper"

SCBI_CLANG_VERSION=12
SCBI_ROOT=$HOME/dev
SCBI_BDIR=$SCBI_ROOT/build-salome-logger
PYTHON_VERSION=$(python3 --version | cut -d' ' -f2 | cut -c1-3)
SCBI_GIT_REPO=$HOME/dev/git
SCBI_PLAN=slogger/mpi
