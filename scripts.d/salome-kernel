
function salome-kernel-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/kernel
}

function salome-kernel-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo salome-kernel-$VERSION.tar.xz
}

function salome-kernel-build-depends()
{
    echo os@-cmake
    echo os@-sphinx-common
    echo os@-sphinx-intl
    echo os@-swig
    echo os@-doxygen
    echo os@-graphviz
}

function salome-kernel-mpi-depends()
{
    echo os@-boost-regexp-dev
    echo os@-python3-mpi4py
}

function salome-kernel-depends()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo os@-boost-dev
    echo os@-boost-filesystem-dev
    echo os@-boost-regex-dev
    echo os@-boost-signals-dev
    echo os@-boost-chrono-dev
    echo os@-boost-date-time-dev
    echo os@-boost-thread-dev
    echo os@-omniorb4-dev
    echo os@-cppunit-dev
    echo os@-graphviz-dev
    echo os@-xml2-dev
    echo os@-graphviz-dev
    echo os@-python3-numpy
    echo os@-hdf5-dev
    echo os@-omniorb
    echo os@-omniorb-idl
    echo os@-omniidl
    echo os@-cos4-dev

    echo salome-configuration
    echo libbatch
    echo s-python-omniorb

    call-variant-hooks depends $PREFIX $TARGET $VARIANT
}

function salome-kernel-env()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    add-to-var MPI_ROOT_DIR       /usr

    add-to-var KERNEL_ROOT_DIR    $PREFIX
    add-to-var KERNEL_INSTALL_DIR $PREFIX
    add-to-var SalomeKERNEL_DIR   $PREFIX/salome_adm/cmake_files
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function salome-kernel-mpi-options()
{
    echo -DSALOME_USE_MPI=ON
}

function salome-kernel-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
    echo -DCMAKE_PREFIX_PATH=$SCBI_BDIR/install
    echo -DSALOME_USE_LIBBATCH=ON
    echo -DSALOME_USE_64BIT_IDS=ON
    echo -DSALOME_BUILD_TESTS=OFF
    echo -DSWIG_EXECUTABLE:PATH=$(which swig)
    echo ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"}
    echo ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"}

    call-variant-hooks options $PREFIX $TARGET $VARIANT
}

function salome-kernel-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(salome-kernel-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS ../src
}

function salome-kernel-build()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    make -j$SCBI_JOBS
}

function salome-kernel-install()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    make install
}

function salome-kernel-prefix()
{
    echo NONE
}
