
function salome-kernel-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/modules-salome.kernel
}

function salome-kernel-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo salome-kernel-$VERSION.tar.xz
}

function salome-kernel-build-depends()
{
    echo cmake
    echo sphinx-common
    echo sphinx-intl
    echo swig
    echo doxygen
    echo graphviz
}

function salome-kernel-depends()
{
    echo libboost-dev
    echo libboost-filesystem-dev
    echo libboost-regex-dev
    echo libboost-signals-dev
    echo libboost-chrono-dev
    echo libboost-date-time-dev
    echo libboost-thread-dev
    echo libomniorb4-dev
    echo libcppunit-dev
    echo libxml2-dev
    echo libgraphviz-dev
    echo python3-numpy

    echo salome-configuration
    echo omniorb
    echo omniorb-idl
    echo omniidl
    echo python-omniorb
    echo hdf5
    echo libbatch
}

function salome-kernel-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var KERNEL_ROOT_DIR    $PREFIX
    add-to-var KERNEL_INSTALL_DIR $PREFIX
    add-to-var SalomeKERNEL_DIR   $PREFIX/salome_adm/cmake_files
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function salome-kernel-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_USE_LIBBATCH=ON \
          -DCMAKE_PREFIX_PATH=$SCBI_BDIR/install \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function salome-kernel-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function salome-kernel-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function salome-kernel-prefix()
{
    echo NONE
}
