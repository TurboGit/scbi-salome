

function salome-kernel-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo salome-kernel-$VERSION.tar.xz 
} 

function salome-kernel-depends()
{
    echo cmake
    echo salome-configuration
    echo swig
    echo libboost-dev
    echo libboost-filesystem-dev
    echo libboost-regex-dev
    echo libboost-signals-dev
    echo libomniorb4-dev
    echo omniorb
    echo omniorb-idl
    echo omniidl
    echo python-omniorb
    echo hdf5
}

function salome-kernel-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var KERNEL_ROOT_DIR    $PREFIX
    add-to-var KERNEL_INSTALL_DIR $PREFIX
    add-to-var SalomeKERNEL_DIR   $PREFIX/salome_adm/cmake_files
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function salome-kernel-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_BUILD_DOC=OFF \
          -DCMAKE_PREFIX_PATH=$BDIR/install ../src
}

function salome-kernel-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function salome-kernel-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function salome-kernel-prefix()
{
    echo NONE
}
