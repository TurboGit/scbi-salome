

function s-yacs-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo none 
    echo yacs-$VERSION.tar.xz 
} 

function s-yacs-build-depends()
{
    echo s-cmake
    echo os@-swig
}

function s-yacs-depends()
{
    echo os@-graphviz-dev
    echo os@-graphviz
    echo os@-sphinx-common
    echo os@-sphinx-intl
    echo s-salome-configuration
    echo s-salome-kernel
    echo s-salome-gui
    echo s-yacsgen
}

function s-yacs-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    YACS_INSTALL_DIR  $PREFIX

    add-to-var CMAKE_PREFIX_PATH $PREFIX/adm/cmake
}

function s-yacs-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_BUILD_GUI=ON \
          -DSWIG_EXECUTABLE:PATH=$(command -v swig) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release) \
          -DSALOME_BUILD_TESTS=OFF \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} \
          ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"} \
          ../src
}

function s-yacs-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-yacs-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-yacs-prefix()
{
    echo NONE
}
