


function s-blsurf-plugin-build-depends()
{
    echo s-cmake
    echo os@-sphinx-common
}

function s-blsurf-plugin-depends()
{
    echo s-salome-configuration
    echo s-salome-kernel
    echo s-salome-gui
    echo s-geom
    echo s-smesh
    echo s-medcoupling
}

function s-blsurf-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var BLSURFPLUGIN_ROOT_DIR $PREFIX
}

function s-blsurf-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release) \
          ../src
}

function s-blsurf-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-blsurf-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-blsurf-plugin-prefix()
{
    echo NONE
}
