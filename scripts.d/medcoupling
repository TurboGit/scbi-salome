

function medcoupling-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo medcoupling-$VERSION.tar.gz 
} 

function medcoupling-build-depends()
{
    echo cmake
    echo sphinx-common
    echo sphinx-intl
    echo python3-sphinx-rtd-theme
}

function medcoupling-depends()
{
    echo ptscotch
    echo libptscotch-dev
    echo metis
    echo libmetis-dev
    echo salome-configuration
    echo salome-kernel
    echo medfichier
}

function medcoupling-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var MEDCOUPLING_ROOT_DIR $PREFIX
    add-to-var MEDCoupling_DIR      $PREFIX/cmake_files
    add-to-var LD_LIBRARY_PATH      $PREFIX/lib
    add-to-var LIBRARY_PATH         $PREFIX/lib
    add-to-var C_INCLUDE_PATH       $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH   $PREFIX/include
    add-to-var PYTHONPATH           $PREFIX/tests/MEDLoader_Swig
    add-to-var PYTHONPATH           $PREFIX/tests/MEDCoupling_Swig
    add-to-var PYTHONPATH           $PREFIX/tests/MEDPartitioner_Swig
    add-to-var PYTHONPATH           \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function medcoupling-mpi-options()
{
    echo -DSALOME_USE_MPI=ON
}

function medcoupling-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"}
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE medcoupling Release)
    echo -DMEDCOUPLING_USE_64BIT_IDS=ON
    echo -DMEDCOUPLING_USE_MPI=ON
    echo -DMEDCOUPLING_PARTITIONER_SCOTCH=OFF
    echo -DMEDCOUPLING_PARTITIONER_PTSCOTCH=ON
    echo -DMEDCOUPLING_PARTITIONER_PARMETIS=OFF
    echo -DMEDCOUPLING_BUILD_TESTS=OFF
    echo -DPTSCOTCH_INCLUDE_DIRS=/usr/include/scotch-long

    call-variant-hooks options $PREFIX $TARGET $VARIANT
}

function medcoupling-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(medcoupling-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS ../src
}

function medcoupling-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function medcoupling-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function medcoupling-prefix()
{
    echo NONE
}
