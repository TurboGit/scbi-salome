
function medcoupling-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/medcoupling
}

function medcoupling-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/medcoupling
}

function medcoupling-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo medcoupling-$VERSION.tar.gz
}

function medcoupling-build-depends()
{
    echo s-cmake-tool
    echo os@-sphinx-common
    echo os@-sphinx-intl
    echo os@-python3-sphinx-rtd-theme
}

function medcoupling-ptscotch-depends()
{
    echo s-ptscotch
}

function medcoupling-scotch-depends()
{
    echo s-scotch
}

function medcoupling-mpi-depends()
{
    echo s-openmpi
}

function medcoupling-depends()
{
    echo os@-metis-dev
    echo os@-libtirpc-dev

    echo metis
    echo salome-configuration
    echo salome-kernel
    echo medfichier
    echo s-openmpi
}

function medcoupling-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var MEDCOUPLING_ROOT_DIR $PREFIX
    add-to-var MEDCoupling_DIR      $PREFIX/cmake_files
    add-to-var LD_LIBRARY_PATH      $PREFIX/lib
    add-to-var LIBRARY_PATH         $PREFIX/lib
    add-to-var C_INCLUDE_PATH       $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH   $PREFIX/include
    add-to-var PYTHONPATH           $PREFIX/tests/MEDLoader_Swig
    add-to-var PYTHONPATH           $PREFIX/tests/MEDCoupling_Swig
    add-to-var PYTHONPATH           $PREFIX/tests/MEDPartitioner_Swig
    add-to-var PYTHONPATH           \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function medcoupling-mpi-config-options()
{
    echo -DSALOME_USE_MPI=ON
}

function medcoupling-ptscotch-config-options()
{
    echo -DMEDCOUPLING_PARTITIONER_SCOTCH=OFF
    echo -DMEDCOUPLING_PARTITIONER_PTSCOTCH=ON

    echo -DPTSCOTCH_INCLUDE_DIRS=$PTSCOTCH_INCLUDE_DIRS
    echo -DPTSCOTCH_ERR_LIBRARIES=$PTSCOTCH_ERR_LIBRARIES
    echo -DPTSCOTCH_LIBRARIES=$PTSCOTCH_LIBRARIES
}

function medcoupling-scotch-config-options()
{
    echo -DMEDCOUPLING_PARTITIONER_SCOTCH=ON
    echo -DMEDCOUPLING_PARTITIONER_PTSCOTCH=OFF
}

function medcoupling-common-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE medcoupling Release)
    echo -DMEDCOUPLING_USE_64BIT_IDS=ON
    echo -DMED_INT_IS_LONG=ON
    echo -DHDF5_LIBRARIES=$HDF5_LIBRARIES
    echo -DMEDCOUPLING_USE_MPI=ON
    echo -DMEDCOUPLING_PARTITIONER_PARMETIS=OFF
    echo -DMEDCOUPLING_BUILD_TESTS=OFF
    echo ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"}
    echo ${DISDOC:+"-DMEDCOUPLING_BUILD_DOC=OFF"}

    echo -DCMAKE_CC_COMPILER=$(get-os-bin mpicc)
    echo -DCMAKE_CXX_COMPILER=$(get-os-bin mpicxx)
}

function medcoupling-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS ../src
}

function medcoupling-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function medcoupling-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function medcoupling-prefix()
{
    echo NONE
}
