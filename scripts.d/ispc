
function ispc-vcs()
{
    echo git
    echo https://github.com/ispc/ispc.git
}

function ispc-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo ispc-$VERSION.tar.gz
}

function ispc-depends()
{
    local VERSION=$1

    echo cmake
    echo clang-4.0
    echo llvm-4.0-tools
    echo libclang-4.0-dev
    echo zlib1g-dev
    echo flex
    echo bison
    echo m4
}

function ispc-post-setup()
{
    local PREFIX=$1
    local TARGET=$2

    # needed for the config
    rm -fr ../src/.git
    cp -r $BDIR/.vcs/ispc/.git ../src
}

function ispc-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH $BDIR/install-tools/bin
}

function ispc-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DCMAKE_CXX_COMPILER=clang++-4.0 ../src
}

function ispc-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function ispc-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function ispc-prefix()
{
    echo $BDIR/install-tools
}
