
function vrpn-vcs()
{
    echo git
    echo git clone https://github.com/vrpn/vrpn
}

function vrpn-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo vrpn-$VERSION.tar.gz
}

function vrpn-out-of-tree()
{
    echo true
}

function vrpn-depends()
{
    echo cmake
}

function vrpn-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var VRPN_ROOT_DIR $PREFIX
    add-to-var VRPN_INCLUDE_DIR $PREFIX/include
    add-to-var VRPN_LIBRARY $PREFIX/lib
}

function vrpn-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX ../src
}

function vrpn-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function vrpn-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function vrpn-prefix()
{
    echo NONE
}
