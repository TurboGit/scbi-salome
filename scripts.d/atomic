
function atomic-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/atomic
}

function atomic-cea-vcs()
{
    echo default
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/atomic
}

function atomic-build-depends()
{
    echo s-cmake-tool
    echo os@-swig
}

function atomic-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
}

function atomic-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var ATOMIC_ROOT_DIR $PREFIX
}

function atomic-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON \
          -DSWIG_EXECUTABLE:PATH=$(which swig) \
          -DSWIG_DIR:PATH=$(swig -swiglib) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE atomic Release) \
          ../src
}

function atomic-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function atomic-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function atomic-prefix()
{
    echo NONE
}
