

function atomic-depends()
{
    echo cmake
    echo configuration
    echo kernel
    echo gui
}

function atomic-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var ATOMIC_ROOT_DIR $PREFIX
}

function atomic-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON \
          -DSWIG_EXECUTABLE:PATH=$(which swig3.0) \
          -DSWIG_DIR:PATH=$(swig3.0 -swiglib) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE atomic Release) \
          ../src
}

function atomic-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function atomic-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function atomic-prefix()
{
    echo NONE
}
