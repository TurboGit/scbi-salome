

function atomic-common-build-depends()
{
    echo s-cmake-tool
}

function atomic-build-depends()
{
    echo os@-swig
}

function atomic-linux-build-depends()
{
    echo s-salome-bin
}

function atomic-common-depends()
{
    echo salome-configuration
}

function atomic-default-depends()
{
    echo salome-kernel
    echo salome-gui
}

function atomic-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var ATOMIC_ROOT_DIR $PREFIX
}

function atomic-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON \
          -DSWIG_EXECUTABLE:PATH=$(which swig) \
          -DSWIG_DIR:PATH=$(swig -swiglib) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE atomic Release) \
          ../src
}

function atomic-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function atomic-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function atomic-prefix()
{
    echo NONE
}
