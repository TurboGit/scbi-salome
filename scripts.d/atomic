

function atomic-build-depends()
{
    echo cmake
    echo swig
}

function atomic-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
}

function atomic-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var ATOMIC_ROOT_DIR $PREFIX
}

function atomic-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON \
          -DGDAL_INCLUDE_DIR=$GDAL_ROOT_DIR/include \
          -DGDAL_LIBRARY=$GDAL_ROOT_DIR/lib/libgdal.so \
          -DSWIG_EXECUTABLE:PATH=$(which swig) \
          -DSWIG_DIR:PATH=$(swig -swiglib) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE atomic Release) \
          ../src
}

function atomic-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function atomic-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function atomic-prefix()
{
    echo NONE
}
