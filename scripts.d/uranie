
function uranie-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/modules
    echo URANIE-$VERSION-Source.tar.gz
}

function uranie-build-depends()
{
    echo s-cmake-tool
    echo os@-xml2-utils
}

function uranie-depends()
{
    echo s-root
    echo os@-python3
    echo os@-python3-dev
    echo os@-boost-dev
}

function uranie-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CMAKE_PREFIX_PATH $PREFIX/lib/cmake
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PYTHONPATH        \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/
}

function uranie-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DUSE_SPHINX=OFF \
          -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DLOCAL_PYTHON_EXEC=$(which python$PYTHON_VERSION) \
          -DPYTHON_EXECUTABLE_FROMROOT=$(which python$PYTHON_VERSION) \
          ../src
}

function uranie-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function uranie-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function uranie-prefix()
{
    echo NONE
}
