

function atomgen-depends()
{
    echo cmake
    echo configuration
    echo atomic
}

function atomgen-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var ATOMGEN_ROOT_DIR $IDIR
}

function atomgen-out-of-tree()
{
    echo true
}

function atomgen-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON \
          -DSWIG_EXECUTABLE:PATH=$(which swig3.0) \
          -DSWIG_DIR:PATH=$(swig3.0 -swiglib) \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function atomgen-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function atomgen-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
