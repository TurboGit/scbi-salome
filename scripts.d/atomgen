

function atomgen-build-depends()
{
    echo cmake
    echo swig
}

function atomgen-depends()
{
    echo salome-configuration
    echo atomic
}

function atomgen-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var ATOMGEN_ROOT_DIR $PREFIX
}

function atomgen-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON \
          -DGDAL_INCLUDE_DIR=$GDAL_ROOT_DIR/include \
          -DGDAL_LIBRARY=$GDAL_ROOT_DIR/lib/libgdal.so \
          -DSWIG_EXECUTABLE:PATH=$(which swig) \
          -DSWIG_DIR:PATH=$(swig -swiglib) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE atomgen Release) \
          ../src
}

function atomgen-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function atomgen-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function atomgen-prefix()
{
    echo NONE
}
