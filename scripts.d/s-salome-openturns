


function s-salome-openturns-build-depends()
{
    echo os@-python3-sphinx
    echo os@-swig
    echo os@-graphviz-dev
    echo os@-doxygen
    echo os@-python3-docutils

    echo s-cmake
    echo s-salome-configuration
}

function s-salome-openturns-depends()
{
    echo os@-qt5-default
    echo os@-qtbase5-dev

    echo s-persalys
    echo s-salome-kernel
    echo s-openturns
    echo s-yacs
}

function s-salome-openturns-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5
    add-to-var QT5_ROOT_DIR       /usr

    add-to-var OPENTURNS_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function s-salome-openturns-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE s-salome-openturns Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function s-salome-openturns-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-salome-openturns-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-salome-openturns-prefix()
{
    echo NONE
}
