


function light-build-depends()
{
    echo cmake
    echo libgraphviz-dev
    echo graphviz
    echo doxygen
    echo python3-docutils
    echo sphinx-common
    echo sphinx-intl
    echo python3-sphinx
    echo python3-sphinx-rtd-theme
    echo swig
    echo salome-configuration
}

function light-depends()
{
    echo salome-gui
}

function light-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var LIGHT_ROOT_DIR $PREFIX
}

function light-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE light Release) \
          ../src
}

function light-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function light-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function light-prefix()
{
    echo NONE
}
