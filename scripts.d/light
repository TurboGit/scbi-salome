
function light-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/light
}

function light-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/light
}

function light-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo LIGHT_SRC_$VERSION.tgz
}

function light-build-depends()
{
    echo s-cmake-tool
    echo os@-graphviz-dev
    echo os@-graphviz
    echo os@-doxygen
    echo os@-python3-docutils
    echo os@-sphinx-common
    echo os@-sphinx-intl
    echo os@-python3-sphinx
    echo os@-python3-sphinx-rtd-theme
    echo os@-swig
    echo salome-configuration
}

function light-depends()
{
    echo salome-gui
}

function light-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var LIGHT_ROOT_DIR $PREFIX
}

function light-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE light Release) \
          ../src
}

function light-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function light-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function light-prefix()
{
    echo NONE
}
