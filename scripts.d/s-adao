
function s-adao-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/salome-adao
}

function s-adao-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/adao
}

function s-adao-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo none
    echo adao-$VERSION.tar.xz
}

function s-adao-build-depends()
{
    local DISDOC=$(is-enabled no-doc)

    echo s-cmake
    [[ -z ${DISDOC} ]] && echo os@-sphinx-common
    [[ -z ${DISDOC} ]] && echo os@-sphinx-intl
}

function s-adao-depends()
{
    echo os@-python3-sphinx-rtd-theme
    echo s-salome-configuration
    echo os@-python3-matplotlib
    echo s-python3-nlopt
    echo os@-python3-scipy
}

function s-adao-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    ADAO_ENGINE_ROOT_DIR $PREFIX

    add-to-var LD_LIBRARY_PATH      $PREFIX/lib
    add-to-var PYTHONPATH           \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function s-adao-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var CURRENT_SOFTWARE_INSTALL_DIR $PREFIX
}

function s-adao-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release) \
          -DPYTHON_EXECUTABLE=$(command -v python$PYTHON_VERSION) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} \
          ${DISDOC:+"-DADAO_BUILD_DOC=OFF"} \
          ../src
}

function s-adao-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-adao-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-adao-prefix()
{
    echo NONE
}
