
function eficas-module-vcs()
{
    echo git
    echo https://git.forge.pleiade.edf.fr/git/eficas.module-eficas
}

function eficas-module-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo eficas-module-$VERSION.tar.xz
}

function eficas-module-depends()
{
    echo cmake
    echo configuration
    echo pyqt
    echo kernel
    echo omniorb
    echo gui
}

function eficas-module-out-of-tree()
{
    echo true
}

function eficas-module-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function eficas-module-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function eficas-module-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function eficas-module-prefix()
{
    echo NONE
}
