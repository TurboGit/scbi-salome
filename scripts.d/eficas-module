
function eficas-module-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/eficas.module-eficas
}

function eficas-module-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo eficas-module-$VERSION.tar.xz
}

function eficas-module-depends()
{
    echo cmake
    echo salome-configuration
    echo pyqt
    echo salome-kernel
    echo omniorb
    echo salome-gui
}

function eficas-module-env()
{
    add-to-var EFICAS_ROOT_DIR $PREFIX/
}

function eficas-module-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_GUI_BUILD_WITH_QT5=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE eficas_module Release) \
          ../src
}

function eficas-module-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function eficas-module-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function eficas-module-prefix()
{
    echo NONE
}
