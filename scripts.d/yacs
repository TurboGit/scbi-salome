
function yacs-vcs()
{
    echo git
    echo https://git.forge.pleiade.edf.fr/git/modules-salome.yacs.git
}

function yacs-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo yacs-$VERSION.tar.xz
}

function yacs-depends()
{
    echo cmake
    echo configuration
    echo kernel
    echo gui
    echo yacsgen
}

function yacs-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_BUILD_GUI=ON \
          -DSWIG_EXECUTABLE:PATH=$(which swig3.0) -DSALOME_BUILD_DOC=OFF \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE yacs Release) \
          ../src
}

function yacs-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function yacs-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function yacs-prefix()
{
    echo NONE
}
