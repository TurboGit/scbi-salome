

function yacs-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo yacs-$VERSION.tar.xz 
} 

function yacs-build-depends()
{
    echo s-cmake-tool
    echo os@-swig
}

function yacs-depends()
{
    echo os@-graphviz-dev
    echo os@-graphviz
    echo os@-sphinx-common
    echo os@-sphinx-intl
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo yacsgen
}

function yacs-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var YACS_INSTALL_DIR  $PREFIX
    add-to-var CMAKE_PREFIX_PATH $PREFIX/adm/cmake
}

function yacs-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_BUILD_GUI=ON \
          -DSWIG_EXECUTABLE:PATH=$(which swig) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE yacs Release) \
          -DSALOME_GUI_BUILD_WITH_QT5=ON -DSALOME_BUILD_TESTS=OFF \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function yacs-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function yacs-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function yacs-prefix()
{
    echo NONE
}
