

function s-paravis-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo none 
    echo paravis-$VERSION.tar.xz 
} 

function s-paravis-ng-build-depends()
{
    echo s-salome-bin
}

function s-paravis-default-build-depends()
{
    echo s-cmake
    echo s-qt
}

function s-paravis-mpi-depends()
{
    echo s-openmpi
}

function s-paravis-common-depends()
{
    echo s-salome-configuration
}

function s-paravis-default-depends()
{
    echo s-hdf5
    echo s-salome-kernel
    echo s-salome-gui
    echo s-paraview
    echo s-medcoupling
    echo s-fields
    echo s-smesh
}

function s-paravis-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    PARAVIS_ROOT_DIR $PREFIX

    add-to-var PV_PLUGIN_PATH   $PREFIX/lib/paraview
    add-to-var LD_LIBRARY_PATH  $PREFIX/lib/paraview
}

function s-paravis-mpi-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DSALOME_USE_MPI=ON
}

function s-paravis-common-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release)
    echo -DVTK_DIR=$(last-modified-directory
                     "$PARAVIEW_INSTALL_DIR/lib/cmake/paraview-*")
    echo ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"}
    echo ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"}

    echo -DMEDCOUPLING_USE_64BIT_IDS=ON
    echo -DPARAVIEW_PLUGIN_ENABLE_ArrayRenamer=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_DevelopedSurfacePlugin=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_DifferenceTimesteps=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_ElevationSurface=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_EllipseBuilderFilter=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_GaussToCellPlugin=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_JSONReader=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_MEDReader=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_MEDWriterPlugin=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_ScaleVector=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_SimpleModePlugin=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_StaticMesh=YES
    echo -DPARAVIEW_PLUGIN_ENABLE_VoroGaussPlugin=YES
}

function s-paravis-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS ../src
}

function s-paravis-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-paravis-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-paravis-prefix()
{
    echo NONE
}
