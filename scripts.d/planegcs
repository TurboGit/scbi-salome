
function planegcs-tar()
{
    local VERSION=$1

    echo defaut
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis/
    echo planegcs-$VERSION.tar.gz
}

function planegcs-depends()
{
    echo libeigen3-dev

    echo cmake
}

function planegcs-env()
{
    add-to-var PLANEGCS_ROOT_DIR $IDIR
    add-to-var EIGEN_ROOT_DIR /usr
}

function planegcs-out-of-tree()
{
    echo true
}

function planegcs-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function planegcs-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function planegcs-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
