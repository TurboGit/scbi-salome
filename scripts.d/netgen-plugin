
function netgen-plugin-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/netgenplugin
}

function netgen-plugin-cea-vcs()
{
    echo default
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/netgenplugin
}

function netgen-plugin-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo NETGENPLUGIN_SRC_$VERSION.tgz
}

function netgen-plugin-build-depends()
{
    echo s-cmake-tool
    echo os@-graphviz-dev
    echo os@-graphviz
    echo os@-doxygen
    echo os@-python3-docutils
    echo os@-sphinx-common
    echo os@-sphinx-intl
    echo os@-python3-sphinx
    echo os@-python3-sphinx-rtd-theme
    echo os@-swig
    echo salome-configuration
    echo os@-qt5-default
}

function netgen-plugin-depends()
{
    echo smesh
    echo netgen
}

function netgen-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5
    add-to-var QT5_ROOT_DIR          /usr

    add-to-var NETGENPLUGIN_ROOT_DIR $PREFIX
}

function netgen-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE netgen-plugin Release) \
          ../src
}

function netgen-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function netgen-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function netgen-plugin-prefix()
{
    echo NONE
}
