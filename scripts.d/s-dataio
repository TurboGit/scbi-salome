
inherit-plugin s-python-post-install-dist-packages

function s-dataio-vcs()
{
    echo edf
    echo default
    echo git
    echo https://gitlab.pleiade.edf.fr/simba/ifclab/dataio.git
}

function s-dataio-out-of-tree()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo FALSE
}

function s-dataio-env()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    set-var    DATAIO_ROOT_DIR $PREFIX

    add-to-var PATH            $PREFIX/bin
    add-to-var PYTHONPATH      $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function s-dataio-install()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    python3 setup.py install --prefix=$PREFIX
}

function s-dataio-prefix()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo NONE
}
