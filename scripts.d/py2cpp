
function py2cpp-vcs()
{
    echo git
    echo https://git.forge.pleiade.edf.fr/git/salome-prototypes.py2cpp
}

function py2cpp-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo py2cpp-$VERSION.tgz
}

function py2cpp-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PY2CPP_ROOT_DIR $IDIR

    add-to-var CMAKE_MODULE_PATH $PREFIX
    add-to-var PATH $BDIR/install-tools/bin
}

function py2cpp-depends()
{
    local PREFIX=$1
    local TARGET=$2

    echo configuration
}

function py2cpp-out-of-tree()
{
    echo true
}

function py2cpp-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function py2cpp-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function py2cpp-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function py2cpp-prefix()
{
    echo $BDIR/install-tools
}
