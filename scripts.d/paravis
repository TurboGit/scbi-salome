

function paravis-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo paravis-$VERSION.tar.xz 
} 

function paravis-depends()
{
    echo cmake
    echo salome-configuration
    echo hdf5
    echo salome-kernel
    echo salome-gui
    echo paraview
    echo medcoupling
    echo fields
    echo smesh
}

function paravis-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PARAVIS_ROOT_DIR $PREFIX
}

function paravis-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_CMAKE_DEBUG=ON \
          -DSALOME_BUILD_DOC=OFF \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE paravis Release) \
          -DSALOME_PARAVIS_MINIMAL_CORBA=ON \
          -DPARAVIEW_ROOT_DIR=$PARAVIEW_ROOT_DIR \
          -DVTK_DIR=$PARAVIEW_INSTALL_DIR/lib/cmake/paraview-5.6 \
          ../src
}

function paravis-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function paravis-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function paravis-prefix()
{
    echo NONE
}
