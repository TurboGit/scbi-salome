

function paravis-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo paravis-$VERSION.tar.xz 
} 

function paravis-build-depends()
{
    echo s-cmake-tool
    echo os@-qt5-default
}

function paravis-depends()
{
    echo s-hdf5
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo paraview
    echo medcoupling
    echo fields
    echo smesh
}

function paravis-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PARAVIS_ROOT_DIR $PREFIX
    add-to-var PV_PLUGIN_PATH   $PREFIX/lib/paraview
    add-to-var LD_LIBRARY_PATH  $PREFIX/lib/paraview
}

function paravis-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE paravis Release) \
          -DVTK_DIR=$(last-modified-directory \
                          "$PARAVIEW_INSTALL_DIR/lib/cmake/paraview-*") \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} \
          ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"} \
	  \
          -DMEDCOUPLING_USE_64BIT_IDS=ON \
	  -DPARAVIEW_PLUGIN_ENABLE_ArrayRenamer=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_DevelopedSurfacePlugin=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_DifferenceTimesteps=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_ElevationSurface=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_EllipseBuilderFilter=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_GaussToCellPlugin=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_JSONReader=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_MEDReader=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_MEDWriterPlugin=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_ScaleVector=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_SimpleModePlugin=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_StaticMesh=YES \
	  -DPARAVIEW_PLUGIN_ENABLE_VoroGaussPlugin=YES \
          ../src
}

function paravis-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function paravis-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function paravis-prefix()
{
    echo NONE
}
