
function sip-vcs()
{
    echo hg
    echo https://www.riverbankcomputing.com/hg/sip
}

function sip-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo sip-$VERSION.tar.gz
}

function sip-build-depends()
{
    echo s-cmake-tool
}

function sip-depends()
{
    echo salome-configuration
}

function sip-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var SIP_ROOT_DIR  $PREFIX
    add-to-var PYQT_SIPS_DIR $PREFIX
    add-to-var PATH          $PREFIX/bin
    add-to-var PYTHONPATH    $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function sip-out-of-tree()
{
    echo false
}

function sip-config()
{
    local PREFIX=$1
    local TARGET=$2

    python3 configure.py -b $PREFIX/bin \
            -d $PREFIX/lib/python$PYTHON_VERSION/site-packages \
            -e $PREFIX/include/python$PYTHON_VERSION \
            -v $PREFIX/share/sip
}

function sip-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function sip-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function sip-prefix()
{
    echo NONE
}
