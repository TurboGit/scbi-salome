

function occt-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var OPENCASCADE_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH      $PREFIX/lib
}

function occt-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_PREFIX_PATH=$BDIR/install ../src
}

function occt-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function occt-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function occt-prefix()
{
    echo NONE
}
