

function occt-build-depends()
{
    echo cmake
}

function occt-depends()
{
    echo tcl-dev
    echo tk-dev
    echo libfreetype6-dev
    echo libxi-dev
    echo libxmu-dev
}

function occt-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var OPENCASCADE_ROOT_DIR $PREFIX
    add-to-var CASROOT              $PREFIX
    add-to-var LD_LIBRARY_PATH      $PREFIX/lib
    add-to-var C_INCLUDE_PATH       $PREFIX/include/opencascade
    add-to-var CPLUS_INCLUDE_PATH   $PREFIX/include/opencascade
    add-to-var CMAKE_MODULE_PATH    $PREFIX/lib/cmake
}

function occt-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_PREFIX_PATH=$SCBI_BDIR/install ../src
}

function occt-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function occt-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function occt-prefix()
{
    echo NONE
}
