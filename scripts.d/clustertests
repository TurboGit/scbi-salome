
function clustertests-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/clustertests.git
}

function clustertests-build-depends()
{
    echo cmake
}

function clustertests-depends()
{
    echo qt5-default
    echo qtbase5-dev

    echo salome-kernel
    echo salome-gui
    echo salome-jobmanager
    echo yacs
    echo melidefx
    echo melissa
    echo salome-openturns
    echo medcoupling
    echo ydefx
}

function clustertests-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH  $PREFIX/bin
}

function clustertests-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DWITH_KERNEL_TESTS:BOOL=ON \
          -DWITH_TESTCONNECTION:BOOL=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE clustertests Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function clustertests-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function clustertests-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function clustertests-prefix()
{
    echo NONE
}
