
function salome-jobmanager-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/jobmanager
}

function salome-jobmanager-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/jobmanager
}

function salome-jobmanager-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo JOBMANAGER_SRC_$VERSION.tgz
}

function salome-jobmanager-build-depends()
{
    echo s-cmake-tool
}

function salome-jobmanager-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
}

function salome-jobmanager-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE jobmanager Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} \
          ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"} \
          ../src
}

function salome-jobmanager-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function salome-jobmanager-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function salome-jobmanager-prefix()
{
    echo NONE
}
