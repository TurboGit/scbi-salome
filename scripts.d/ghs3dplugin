

function ghs3dplugin-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo ghs3dplugin-$VERSION.tar.xz 
} 

function ghs3dplugin-depends()
{
    echo cmake
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo smesh
}

function ghs3dplugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var GHS3DPLUGIN_ROOT_DIR $PREFIX
}

function ghs3dplugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE ghs3dplugin Release) \
          ../src
}

function ghs3dplugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function ghs3dplugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function ghs3dplugin-prefix()
{
    echo NONE
}
