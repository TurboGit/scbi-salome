
function s-gmsh-plugin-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/gmshplugin
}

function s-gmsh-plugin-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/gmshplugin
}

function s-gmsh-plugin-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/modules
    echo GMSHPLUGIN_SRC_$VERSION.tgz
}

function s-gmsh-plugin-build-depends()
{
    echo s-cmake
    echo os@-sphinx-common
}

function s-gmsh-plugin-depends()
{
    echo s-salome-configuration
    echo s-salome-kernel
    echo s-salome-gui
    echo s-omniorb
    echo s-qt
    echo s-occt
    echo s-geom
    echo s-gmsh
    echo s-smesh
}

function s-gmsh-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var GMSHPLUGIN_ROOT_DIR $PREFIX
}

function s-gmsh-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} \
          ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"} \
          ../src
}

function s-gmsh-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-gmsh-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-gmsh-plugin-prefix()
{
    echo NONE
}
