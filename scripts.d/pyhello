

function pyhello-build-depends()
{
    echo os@-cmake
    echo os@-swig
    echo os@-doxygen
    echo salome-configuration
    echo os@-qt5-default
}

function pyhello-depends()
{
    echo salome-gui
}

function pyhello-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PYHELLO_ROOT_DIR $PREFIX
    add-to-var PYQT5_ROOT_DIR   $PREFIX
}

function pyhello-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE pyhello Release) \
          ../src
}

function pyhello-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function pyhello-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function pyhello-prefix()
{
    echo NONE
}
