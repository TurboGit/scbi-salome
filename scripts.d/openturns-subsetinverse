

function openturns-subsetinverse-build-depends()
{
    echo cmake
    echo swig
    echo python3-sphinx
}

function openturns-subsetinverse-depends()
{
    echo openturns
    echo python3
}

function openturns-subsetinverse-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PYTHONPATH        \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/
    add-to-var OTSUBSETINVERSE_HOME    $PREFIX
}

function openturns-subsetinverse-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DUSE_SPHINX=OFF \
          -DBUILD_DOC=OFF \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          -DCMAKE_FIND_ROOT_PATH=ON \
          -DSWIG_EXECUTABLE:PATH=$(which swig) \
          -DSWIG_DIR:FILEPATH=$(swig -swiglib) \
          -DSPHINX_ROOT_DIR:FILEPATH=$(dirname dpkg -L python3-sphinx | grep sphinx-build) \
          -DSPHINX_EXECUTABLE:FILEPATH=$(dpkg -L python3-sphinx | grep sphinx-build) \
          -DCMAKE_SKIP_INSTALL_RPATH:BOOL=ON \
          -DCMAKE_INSTALL_PREFIX=$PREFIX \
          ../src
}

function openturns-subsetinverse-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function openturns-subsetinverse-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function openturns-subsetinverse-prefix()
{
    echo NONE
}
