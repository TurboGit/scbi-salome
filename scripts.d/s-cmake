inherit-plugin c-cmake

with-variant native os@-cmake:[v] \
  --env 'prepend-to-var PATH $(get-os-bin-dir cmake)'

#  Adds a Windows variant using the MingW64 cmake version
with-variant win \
  --env 'add-to-var PATH $(cygpath -c -s "c:\opt\msys64\mingw64in")'

function s-cmake-vcs() 
{ 
    echo default
    echo none 
    echo git 
    echo https://github.com/Kitware/CMake.git 
} 


function s-cmake-build-depends()
{
    echo os@-g++
    echo os@-make
    echo os@-openssl-dev
}

function s-cmake-env()
{
    local PREFIX=$1
    local TARGET=$2

    prepend-to-var PATH $PREFIX/bin
}
