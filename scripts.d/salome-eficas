

function salome-eficas-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo salome-eficas-$VERSION.tar.xz 
} 

function salome-eficas-build-depends()
{
    echo s-cmake-tool
}

function salome-eficas-depends()
{
    echo salome-configuration
    echo os@-python3-pyqt5
    echo salome-kernel
    echo os@-omniorb
    echo salome-gui
}

function salome-eficas-env()
{
    add-to-var EFICAS_ROOT_DIR $PREFIX/
}

function salome-eficas-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_GUI_BUILD_WITH_QT5=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE eficas_module Release) \
          ../src
}

function salome-eficas-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function salome-eficas-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function salome-eficas-prefix()
{
    echo NONE
}
