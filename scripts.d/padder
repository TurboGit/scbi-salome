


function padder-out-of-tree()
{
    echo false
}

function padder-depends()
{
    echo medfichier
    echo os@-boost-dev
    echo os@-cgal-dev
    echo os@-hdf5-dev
}

function padder-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CGALHOME           /usr
    add-to-var HDF5HOME           /usr
    add-to-var BOOSTDIR           /usr

    # HDF5
    add-to-var C_INCLUDE_PATH     /usr/include/hdf5/openmpi
    add-to-var CPLUS_INCLUDE_PATH /usr/include/hdf5/openmpi
    add-to-var LD_LIBRARY_PATH    /usr/lib/$TARGET/hdf5/openmpi
    add-to-var LIBRARY_PATH       /usr/lib/$TARGET/hdf5/openmpi

    # MPI
    add-to-var C_INCLUDE_PATH     /usr/lib/$TARGET/openmpi/include
    add-to-var CPLUS_INCLUDE_PATH /usr/lib/$TARGET/openmpi/include
}

function padder-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PADDER_ROOT_DIR $PREFIX
    add-to-var PADDERHOME      $PREFIX
    add-to-var MED3HOME        $MEDFILE_ROOT_DIR/include
}

function padder-build()
{
    local PREFIX=$1
    local TARGET=$2

    make PREFIX=$PREFIX BOOST_LFLAGS="-lboost_thread -lgmp"
}

function padder-install()
{
    local PREFIX=$1
    local TARGET=$2

    make PREFIX=$PREFIX install
}

function padder-prefix()
{
    local PREFIX=$1
    local TARGET=$2

    echo NONE
}
