

function salome-configuration-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo salome-configuration-$VERSION.tar.xz 
} 

function salome-configuration-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CONFIGURATION_ROOT_DIR $SCBI_BDIR/install
    add-to-var CONFIGURATION_CMAKE_DIR $SCBI_BDIR/install/cmake

    add-to-var CMAKE_MODULE_PATH $CONFIGURATION_CMAKE_DIR
    add-to-var CMAKE_PREFIX_PATH $CONFIGURATION_CMAKE_DIR
}

function salome-configuration-out-of-tree()
{
    echo false
}

function salome-configuration-install()
{
    local PREFIX=$1
    local TARGET=$2

    # this is no installation for this tool, yet we do copy all
    # sources into install directory which seems cleaner.

    cd ..
    rsync -a --delete src/. install
}
