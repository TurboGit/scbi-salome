
function s-code-syrthes-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/syrthes.git
}

function s-code-syrthes-out-of-tree()
{
    echo false
}

function s-code-syrthes-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3
    local KIND=$4
    local REF=$5

    # The following patch is to update setup
    echo syrthes_setup.ini.salome.patch
    echo syrthes-gui_Install.patch
    echo syrthes_install.patch
}

function s-code-syrthes-ng-build-depends()
{
    echo s-salome-bin
}

function s-code-syrthes-common-build-depends()
{
    echo s-cmake
}

function s-code-syrthes-common-depends()
{
    echo s-cfd-study
    echo s-saturne
    echo s-scotch
}

function s-code-syrthes-default-depends()
{
    echo os@-metis-dev
    echo s-hdf5
    echo s-medcoupling
}

function s-code-syrthes-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    CODESYRTHES_ROOT_DIR  $PREFIX
    set-var    SYRTHES_HOME          $PREFIX
    set-var    SYRTHES_ROOT          $PREFIX
    set-var    NOM_ARCH              Linux_x86_64
    set-var    SYRTHES4_HOME         $PREFIX/arch/$NOM_ARCH

    add-to-var LD_LIBRARY_PATH       $PREFIX/lib
    add-to-var PATH                  $SYRTHES4_HOME/bin
    add-to-var PATH                  $SYRTHES4_HOME/share/syrthes
    add-to-var PYTHONPATH            $PREFIX/src/syrthes-gui/src/install #/SyrthesMain
}

function s-code-syrthes-config()
{
    local PREFIX=$1
    local TARGET=$2

    rsync -az ../src/* $PREFIX
}

function s-code-syrthes-install()
{
    local PREFIX=$1
    local TARGET=$2

    cd $PREFIX/src/syrthes-install
    cp -f setup.ini.salome setup.ini
    chmod a+x $PREFIX/src/syrthes-install/syrthes_install.py
    python3 syrthes_install.py
}

