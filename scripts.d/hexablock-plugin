
function hexablock-plugin-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/hexablockplugin
}

function hexablock-plugin-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/hexablockplugin
}

function hexablock-plugin-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/modules
    echo HEXABLOCKPLUGIN_SRC_$VERSION.tgz
}

function hexablock-plugin-build-depends()
{
    echo s-cmake-tool
    echo os@-python3-sphinx
    echo os@-swig
    echo os@-graphviz-dev
    echo os@-doxygen
    echo os@-python3-docutils
    echo salome-configuration
}

function hexablock-plugin-depends()
{
    echo os@-qt5-default
    echo os@-qtbase5-dev

    echo salome-gui
    echo smesh
    echo hexablock
}

function hexablock-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5
    add-to-var QT5_ROOT_DIR              /usr

    add-to-var HEXABLOCKPLUGIN_ROOT_DIR  $PREFIX
    add-to-var LD_LIBRARY_PATH           $PREFIX/lib/salome
    add-to-var PYTHONPATH                \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function hexablock-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_TESTS=OFF \
          -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE hexablock-plugin Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function hexablock-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function hexablock-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function hexablock-plugin-prefix()
{
    echo NONE
}
