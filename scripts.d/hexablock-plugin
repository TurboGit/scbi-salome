


function hexablock-plugin-build-depends()
{
    echo cmake
    echo python3-sphinx
    echo swig
    echo libgraphviz-dev
    echo doxygen
    echo python3-docutils
    echo salome-configuration
}

function hexablock-plugin-depends()
{
    echo qt5-default
    echo qtbase5-dev

    echo salome-gui
    echo smesh
    echo hexablock
}

function hexablock-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5
    add-to-var QT5_ROOT_DIR              /usr

    add-to-var HEXABLOCKPLUGIN_ROOT_DIR  $PREFIX
    add-to-var LD_LIBRARY_PATH           $PREFIX/lib/salome
    add-to-var PYTHONPATH                \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function hexablock-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_TESTS=OFF \
          -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE hexablock-plugin Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function hexablock-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function hexablock-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function hexablock-plugin-prefix()
{
    echo NONE
}
