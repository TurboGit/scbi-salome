
function ghs3dprl-plugin-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/ghs3dprlplugin
}

function ghs3dprl-plugin-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/ghs3dprlplugin
}

function ghs3dprl-plugin-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo GHS3DPRLPLUGIN_SRC_$VERSION.tgz
}

function ghs3dprl-plugin-build-depends()
{
    echo s-cmake-tool
    echo salome-configuration
    echo os@-swig
    echo os@-doxygen
}

function ghs3dprl-plugin-depends()
{
    echo os@-qt5-default
    echo os@-qtbase5-dev
    echo meshgems

    echo smesh
    echo ghs3d-plugin
}

function ghs3dprl-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var GHS3DPRLPLUGIN_ROOT_DIR $PREFIX
}

function ghs3dprl-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE ghs3dprl-plugin Release) \
          -DMESHGEMS_ROOT_DIR=$MESHGEMS_ROOT_DIR \
          ../src
}

function ghs3dprl-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function ghs3dprl-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function ghs3dprl-plugin-prefix()
{
    echo NONE
}
