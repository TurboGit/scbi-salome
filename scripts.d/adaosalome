

function adaosalome-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo adaosalome-$VERSION.tar.xz 
} 

function adaosalome-depends()
{
    echo cmake
    echo sphinx-common
    echo python3-docutils
    echo salome-configuration
    echo omniorb
    echo salome-kernel
    echo eficas-tools
    echo python-omniorb
    echo libbatch
}

function adaosalome-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var LD_LIBRARY_PATH $PREFIX/lib/salome
    add-to-var PYTHONPATH $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function adaosalome-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CURRENT_SOFTWARE_INSTALL_DIR $PREFIX
}

function adaosalome-config()
{
    local PREFIX=$1
    local TARGET=$2

    PSP=lib/python$PYTHON_VERSION/site-packages
    INI=$PSP/salome/adao/daCore/__init__.py

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DADAO_PYTHON_MODULE=OFF \
          -DEFICAS_ROOT_DIR=$EFICAS_ROOT_DIR \
          -DKERNEL_ROOT_DIR=$KERNEL_ROOT_DIR \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          -DADAO_PYTHON_ROOT_DIR=$PREFIX \
          -DFILE_OF_ADAO_PYTHON_MODULE=$PREFIX/daComposant/$PSP/$INI \
          -DADAO_SALOME_MODULE=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE adaosalome Release) \
          ../src
}

function adaosalome-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function adaosalome-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function adaosalome-prefix()
{
    echo NONE
}
