
function s-paraview-vcs() 
{ 
    echo default
    echo none 
    echo git 
    echo https://github.com/Kitware/ParaView.git 
} 


function s-paraview-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3
    local KIND=$4
    local REF=$5

    [[ $REF =~ "5.8" ]] && echo paraview-autoload.patch
    [[ $REF =~ "5.9" ]] && echo paraview-5.9.patch
}

