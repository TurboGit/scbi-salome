
function blsurf-plugin-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/plugins-salome.blsurfplugin
}

function blsurf-plugin-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo BLSURFPLUGIN_SRC_$VERSION.tgz
}

function blsurf-plugin-build-depends()
{
    echo cmake
    echo sphinx-common
}

function blsurf-plugin-depends()
{
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo smesh
    echo meshgems
}

function blsurf-plugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var BLSURFPLUGIN_ROOT_DIR $PREFIX
}

function blsurf-plugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE blsurf-plugin Release) \
          ../src
}

function blsurf-plugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function blsurf-plugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function blsurf-plugin-prefix()
{
    echo NONE
}
