
function persalys-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/incertitudes.otgui-phimeca.git
}

function persalys-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo persalys-$VERSION.tar.xz
}

function persalys-common-build-depends()
{
    echo s-cmake-tool
    echo os@-boost-locale-dev
}

function persalys-default-build-depends()
{
    echo py2cpp
}

function persalys-common-depends()
{
    echo salome-configuration
    # And other modules not part of binary installation
    echo openturns
    echo openturns-morris
    echo ydefx
}

function persalys-default-depends()
{
    echo salome-gui
    echo salome-kernel
    echo yacs
    echo adao
    echo adao-interface
}

function persalys-linux-depends()
{
    echo s-salome-bin
}

function persalys-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PERSALYS_ROOT_DIR $PREFIX
    add-to-var PYTHONPATH        $PREFIX/lib/python$PYTHON_VERSION/site-packages
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PATH              $PREFIX/bin

    add-to-var PERSALYS_CALIBRATION_ENGINE      adao
    add-to-var PERSALYS_HTML_DOCUMENTATION_PATH $PREFIX/share/persalys/doc/html
    add-to-var OTGUI_HTML_DOCUMENTATION_PATH    $PREFIX/share/otgui/doc/html
    add-to-var PV_PLUGIN_PATH                   $PREFIX/lib
}

function persalys-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE persalys Release) \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          -DUSE_SALOME=ON \
          -DAdaoCppLayer_INCLUDE_DIR=$ADAO_INTERFACE_ROOT_DIR/include \
          -DAdaoCppLayer_ROOT_DIR=$ADAO_INTERFACE_ROOT_DIR \
          ../src
}

function persalys-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function persalys-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function persalys-prefix()
{
    echo NONE
}
