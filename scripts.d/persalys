

function persalys-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo persalys-$VERSION.tar.xz 
} 

function persalys-build-depends()
{
    echo cmake
    echo py2cpp
    echo libboost-locale-dev
}

function persalys-depends()
{
    echo salome-configuration
    echo salome-gui
    echo salome-kernel
    echo openturns
    echo yacs
    echo adao
    echo ydefx
    echo adao-interface
    echo libboost-locale-dev
}

function persalys-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PERSALYS_ROOT_DIR $PREFIX
    add-to-var PYTHONPATH        $PREFIX/lib/python$PYTHON_VERSION/site-packages
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PATH              $PREFIX/bin

    add-to-var PERSALYS_CALIBRATION_ENGINE      adao
    add-to-var PERSALYS_HTML_DOCUMENTATION_PATH $PREFIX/share/persalys/doc/html
    add-to-var OTGUI_HTML_DOCUMENTATION_PATH    $PREFIX/share/otgui/doc/html
    add-to-var PV_PLUGIN_PATH                   $PREFIX/lib
}

function persalys-build-env()
{
    local PREFIX=$1
    local TARGET=$2

}

function persalys-config()
{
    local PREFIX=$1
    local TARGET=$2

    # force libqwt-qt5.so because the default qwt could be based on Qt4
    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE persalys Release) \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) -DUSE_SALOME=ON \
          -DAdaoCppLayer_INCLUDE_DIR=$ADAO_INTERFACE_ROOT_DIR/include \
          -DAdaoCppLayer_ROOT_DIR=$ADAO_INTERFACE_ROOT_DIR \
          -DGDAL_LIBRARY=$GDAL_LIBRARY \
          -DQWT_LIBRARY=/usr/lib/libqwt-qt5.so \
          ../src
}

function persalys-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function persalys-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function persalys-prefix()
{
    echo NONE
}
