
function s-atomic-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/atomic
}

function s-atomic-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/atomic
}

function s-atomic-common-build-depends()
{
    echo s-cmake
}

function s-atomic-build-depends()
{
    echo os@-swig
}

function s-atomic-win-build-depends()
{
    echo s-visual-c
    echo s-salome-bin
}

function s-atomic-linux-build-depends()
{
    echo s-salome-bin
}

function s-atomic-common-depends()
{
    echo s-salome-configuration
}

function s-atomic-default-depends()
{
    echo s-salome-kernel
    echo s-salome-gui
}

function s-atomic-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var ATOMIC_ROOT_DIR $PREFIX
}

function s-atomic-common-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release)
}

function s-atomic-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
}

function s-stomic-win-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INSTALL_PREFIX=$(cygpath -w "$PREFIX")
}

function s-atomic-win-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake -G "NMake Makefiles" $OPTIONS ../src
}

function s-atomic-config()
{
    local PREFIX=$1
    local TARGET=$2

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS ../src
}

function s-atomic-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-atomic-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-atomic-prefix()
{
    echo NONE
}
