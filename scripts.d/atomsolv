
function atomsolv-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/atomsolv
}

function atomsolv-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo ATOMSOLV_SRC_$VERSION.tgz
}

function atomsolv-build-depends()
{
    echo os@-cmake
    echo os@-swig
}

function atomsolv-depends()
{
    echo salome-configuration
    echo atomgen
}

function atomsolv-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var ATOMSOLV_ROOT_DIR $PREFIX
}

function atomsolv-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_INCLUDE_DIRECTORIES_BEFORE=ON \
          -DSWIG_EXECUTABLE:PATH=$(which swig) \
          -DSWIG_DIR:PATH=$(swig -swiglib) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE atomsolv Release) \
          ../src
}

function atomsolv-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function atomsolv-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function atomsolv-prefix()
{
    echo NONE
}
