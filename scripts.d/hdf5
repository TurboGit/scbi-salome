
function hdf5-vcs()
{
    echo git
    echo https://bitbucket.hdfgroup.org/scm/hdffv/hdf5.git
}

function hdf5-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo hdf5-$VERSION.tar.gz
}

function hdf5-depends()
{
    echo cmake
}

function hdf5-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var HDF5_ROOT_DIR $IDIR
    add-to-var HDF5_LIBRARIES $IDIR/lib
    add-to-var HDF5_C_INCLUDE_DIR $IDIR/include
    add-to-var HDF5_INCLUDE_DIRS $IDIR/include
}

function hdf5-out-of-tree()
{
    echo true
}

function hdf5-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_BUILD_DOC=OFF \
          -DHDF5_BUILD_HL_LIB=ON -DHDF5_BUILD_TOOLS=ON \
          -DBUILD_SHARED_LIBS=ON -DHDF5_ENABLE_Z_LIB_SUPPORT=ON \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function hdf5-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function hdf5-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
