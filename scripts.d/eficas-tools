

function eficas-tools-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo eficas-tools-$VERSION.tar.xz 
} 

function eficas-tools-depends()
{
    echo cmake
    echo sphinx-common
    echo salome-configuration
    echo pyqt
}

function eficas-tools-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var EFICAS_ROOT_DIR $PREFIX
}

function eficas-tools-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DWITH_TELEMAC_CATA=ON -DBUILD_DOC=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE eficas_tools Release) \
          ../src
}

function eficas-tools-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function eficas-tools-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function eficas-tools-prefix()
{
    echo NONE
}
