
function eficas-tools-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/eficas
}

function eficas-tools-cea-vcs()
{
    echo default
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/eficas_tools
}

function eficas-tools-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo eficas-tools-$VERSION.tar.xz
}

function eficas-tools-build-depends()
{
    echo s-cmake-tool
    echo os@-sphinx-common
}

function eficas-tools-depends()
{
    echo salome-configuration
    echo os@-python3-pyqt5
}

function eficas-tools-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var EFICAS_ROOT $PREFIX
    add-to-var PYTHONPATH  $PREFIX
    add-to-var PYTHONPATH  $PREFIX/UiQt5
}

function eficas-tools-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DWITH_TELEMAC_CATA=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE eficas_tools Release) \
          ../src
}

function eficas-tools-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function eficas-tools-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function eficas-tools-prefix()
{
    echo NONE
}
