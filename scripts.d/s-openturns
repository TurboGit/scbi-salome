
function s-openturns-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/openturns/openturns.git
}

function s-openturns-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo openturns-$VERSION.tar.bz2
}

function s-openturns-build-depends()
{
    echo s-cmake-tool
    echo os@-xml2-utils
}

function s-openturns-depends()
{
    echo os@-blas-dev
    echo os@-lapack-dev
    echo os@-python3
    echo os@-python3-dev
    echo os@-bz2-dev
    echo os@-python3-matplotlib
    echo os@-python3-numpy
    # since 1.13
    echo os@-cminpack-dev
}

function s-openturns-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CMAKE_PREFIX_PATH $PREFIX/lib/cmake
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
    add-to-var PYTHONPATH        \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/
    add-to-var OPENTURNS_HOME    $PREFIX
}

function s-openturns-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DUSE_SPHINX=OFF -DUSE_DOXYGEN=OFF \
          -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DPYTHON_EXECUTABLE=$(command -v python$PYTHON_VERSION) \
          ../src
}

function s-openturns-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-openturns-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-openturns-prefix()
{
    echo NONE
}
