
#  These are settings to use an installed SALOME binary for Windows

with-variant win \
  --env \
    'add-to-var SCBI_SALOME_BIN      "C:/opt/SALOME-9.7.0/W64"'               \
    'add-to-var INCLUDE              $SCBI_SALOME_BIN/EXT/include'            \
    \
    'add-to-var HDF5_ROOT            $SCBI_SALOME_BIN/EXT'                    \
    'add-to-var HDF5_LIBRARIES       $SCBI_SALOME_BIN/EXT/lib/libhdf5.lib'    \
    'add-to-var HDF5_HL_LIBRARIES    $SCBI_SALOME_BIN/EXT/lib/libhdf5_hl.lib' \
    'add-to-var HDF5_INCLUDE_DIRS    $SCBI_SALOME_BIN/EXT/include'            \
    \
    'add-to-var LIBXML2_LIBRARY      $SCBI_SALOME_BIN/EXT/lib/libxml2.lib'    \
    'add-to-var LIBXML2_INCLUDE_DIR  $SCBI_SALOME_BIN/EXT/include'            \
    \
    'add-to-var FREETYPE_LIBRARY     $SCBI_SALOME_BIN/EXT/lib/freetype.lib'   \
    \
    'add-to-var ZLIB_LIBRARY         $SCBI_SALOME_BIN/EXT/bin/zlib.lib'       \
    \
    'add-to-var CGNS_LIBRARY         $SCBI_SALOME_BIN/EXT/lib/cgns.lib'       \
    \
    'add-to-var Python3_EXECUTABLE   $SCBI_SALOME_BIN/Python/python3.exe'     \
    'add-to-var Python3_LIBRARIES    $SCBI_SALOME_BIN/Python/python3.lib'     \
    'add-to-var Python3_INCLUDE_DIRS $SCBI_SALOME_BIN/Python/include'         \
    \
    'add-to-var CMAKE_PREFIX_PATH $SCBI_SALOME_BIN/cmake/share/cmake-3.12/Modules' \
    'add-to-var CMAKE_PREFIX_PATH $SCBI_SALOME_BIN/ParaView/lib/cmake/paraview-5.9' \
    'add-to-var CMAKE_PREFIX_PATH $SCBI_SALOME_BIN/EXT/lib/cmake/ospray-2.4.0' \
    'add-to-var CMAKE_PREFIX_PATH $SCBI_SALOME_BIN/EXT/lib/cmake' \
    'add-to-var CMAKE_PREFIX_PATH $SCBI_SALOME_BIN/embree/lib/cmake/embree-3.12.2' \
    'add-to-var CMAKE_PREFIX_PATH $SCBI_SALOME_BIN/rkCommon/lib/cmake/rkcommon-1.5.1' \
    'add-to-var CMAKE_PREFIX_PATH $SCBI_SALOME_BIN/openVKL/lib/cmake/openvkl-0.11.0' \
    'add-to-var CMAKE_PREFIX_PATH $SCBI_SALOME_BIN/qt/lib/cmake' \
    \
    'add-to-var TBB_ROOT          $SCBI_SALOME_BIN/EXT'
