
function medfichier-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo med-$VERSION.tar.gz
}

function medfichier-cea-tar()
{
    local VERSION=$1

    echo edf
    echo wget
    echo ftp://anonymous@ftp.cea.fr/pub/salome/prerequisites
    echo med-$VERSION.tar.gz
}

function medfichier-patches()
{
    echo medfichier-mpi-config.patch
}

function medfichier-build-depends()
{
    echo s-cmake-tool
    echo os@-swig
}

function medfichier-depends()
{
    echo os@-python3
    echo os@-python3-dev
    echo os@-gfortran

    echo s-hdf5
    echo salome-configuration
    echo salome-kernel
}

function medfichier-mpi-depends()
{
    echo s-openmpi
}

function medfichier-build-env()
{

    add-to-var PYTHON /usr/bin/python$PYTHON_VERSION
}

function medfichier-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var MEDFILE_ROOT_DIR   $PREFIX
    add-to-var MEDFile_DIR        \
	       $(last-modified-directory "$PREFIX/share/cmake/med-fichier-*")
    add-to-var PATH               $PREFIX/bin
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
    add-to-var LIBRARY_PATH       $PREFIX/lib
    add-to-var C_INCLUDE_PATH     $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function medfichier-common-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo --prefix=$PREFIX
    echo --with-swig=$(command -v swig)
    echo --with-hdf5=$HDF5_LIB
    echo --with-hdf5-include=$HDF5_INC
    echo --with-hdf5-lib=$HDF5_LIB
    echo --with-hdf5-bin=$HDF5_BIN
    echo --enable-mesgerr
    echo --with-med_int=long
}

function medfichier-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    ../src/configure $OPTIONS
}

function medfichier-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function medfichier-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function medfichier-prefix()
{
    echo NONE
}
