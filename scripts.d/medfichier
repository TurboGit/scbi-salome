

function medfichier-depends()
{
    echo cmake
    echo configuration
    echo kernel
    echo hdf5
}

function medfichier-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var MEDFILE_ROOT_DIR $PREFIX
    add-to-var MEDFile_DIR      $PREFIX/share/cmake/med-fichier-4.0.0
    add-to-var LD_LIBRARY_PATH  $PREFIX/lib
}

function medfichier-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF \
          --enable-mesgerr --with-swig=$(which swig) \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE medfichier Release) \
          ../src
}

function medfichier-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function medfichier-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function medfichier-prefix()
{
    echo NONE
}
