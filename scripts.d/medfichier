
function medfichier-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo med-$VERSION.tar.gz
}

function medfichier-depends()
{
    echo cmake
    echo configuration
    echo kernel
    echo hdf5
}

function medfichier-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var MEDFILE_ROOT_DIR $PREFIX
    add-to-var MEDFile_DIR $PREFIX/share/cmake/med-fichier-4.0.0
}

function medfichier-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF \
          --enable-mesgerr --with-swig=$(which swig) \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function medfichier-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function medfichier-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function medfichier-prefix()
{
    echo NONE
}
