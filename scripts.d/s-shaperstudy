

function s-shaperstudy-build-depends()
{
    echo s-cmake-tool
}

function s-shaperstudy-depends()
{
    echo s-salome-configuration
    echo s-salome-kernel
    echo s-geom
    echo s-shaper
}

function s-shaperstudy-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var SHAPERSTUDY_ROOT_DIR $PREFIX
}

function s-shaperstudy-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE shaper Release) \
          ../src
}

function s-shaperstudy-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-shaperstudy-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-shaperstudy-prefix()
{
    echo NONE
}
