
function ospray-vcs()
{
    echo edf
    echo no-recursive
    echo git
    echo https://github.com/ospray/ospray.git
}

function ospray-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo ospray-$VERSION.tar.gz
}

function ospray-build-depends()
{
    echo s-cmake-tool
    echo ispc
    echo s-clang-edf
}

function ospray-depends()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo os@-tbb-dev
    echo os@-libxrandr-dev
    echo os@-libxinerama-dev
    echo os@-libxcursor-dev
    echo embree
}

function ospray-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var OSPRAY_ROOT_DIR    $PREFIX
    add-to-var OSPRAY_BUILD_DIR   $PREFIX/../build

    add-to-var C_INCLUDE_PATH     $PREFIX/include/ospray
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include/ospray
    add-to-var LIBRARY_PATH       $PREFIX/lib
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib

    add-to-var CMAKE_PREFIX_PATH \
               $(last-modified-directory "$PREFIX/lib/cmake/ospray-*")
}

function ospray-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_C_COMPILER=clang-${SCBI_CLANG_VERSION} \
          -DCMAKE_CXX_COMPILER=clang++ ../src
}

function ospray-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function ospray-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function ospray-prefix()
{
    echo NONE
}
