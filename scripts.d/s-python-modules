
#  Install some python modules using pip3. Note that this plug-in do not
#  install dependencies, so the full list of modules to be installed must
#  be explicitly specified.

function s-python-modules-wand-modules()
{
    echo s-python3-wand
}

function s-python-modules-pyaml-modules()
{
    echo s-python3-yaml
}

function s-python-modules-meshio-modules()
{
    echo s-python3-meshio
}

function s-python-modules-toml-modules()
{
    echo s-python3-toml
}

function s-python-modules-lxml-modules()
{
    echo s-python3-lxml
}

function s-python-modules-pyproj-modules()
{
    echo s-python3-proj
}

function s-python-modules-metadata-modules()
{
    echo s-python3-importlib-metadata
}

function s-python-modules-xlutils-modules()
{
    echo s-python3-xlutils
}

function s-python-modules-numpy-modules()
{
    echo s-python3-numpy
}

function s-python-modules-scipy-modules()
{
    echo s-python3-scipy
}

function s-python-modules-nlopt-modules()
{
    echo s-python3-nlopt
}

function s-python-modules-telemac-modules()
{
    echo s-python3-telemac
}

function s-python-modules-core-modules()
{
    #  All the core python modules for SALOME
    s-python-modules-wand-modules
    s-python-modules-pyaml-modules
    s-python-modules-toml-modules
    s-python-modules-metadata-modules
    s-python-modules-xlutils-modules
    s-python-modules-lxml-modules
    s-python-modules-numpy-modules
    s-python-modules-scipy-modules
    s-python-modules-nlopt-modules
}

function s-python-modules-out-of-tree()
{
    echo false
}

function s-python-modules-aggregate()
{
    echo true
}

function s-python-modules-prefix()
{
    echo NONE
}
