
function salome-openturns-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/incertitudes.otsalomemodule.git
}

function salome-openturns-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo OPENTURNS_SRC_$VERSION.tgz
}

function salome-openturns-build-depends()
{
    echo cmake
    echo python3-sphinx
    echo swig
    echo libgraphviz-dev
    echo doxygen
    echo python3-docutils
    echo salome-configuration
}

function salome-openturns-depends()
{
    echo qt5-default
    echo qtbase5-dev
    echo persalys

    echo salome-kernel
    echo openturns
    echo yacs
}

function salome-openturns-env()
{
    local PREFIX=$1
    local TARGET=$2

    # Use system Qt5
    add-to-var QT5_ROOT_DIR       /usr

    add-to-var OPENTURNS_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function salome-openturns-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_TESTS=OFF \
          -DCMAKE_PREFIX_PATH=$PREFIX/lib/cmake \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE salome-openturns Release) \
          -DOTGUI_ROOT_DIR=$PERSALYS_ROOT_DIR \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} ../src
}

function salome-openturns-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function salome-openturns-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function salome-openturns-prefix()
{
    echo NONE
}
