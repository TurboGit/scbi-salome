
function s-root-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/root-project/root.git
}

function s-root-archive()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo root-$VERSION-src.tar.gz
}

function s-root-patches()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3
    local KIND=$4
    local REF=$5

    [[ $REF =~ 6-22-02 ]] &&
        echo root-6.22.02.patch
    [[ $REF =~ 6-22-06 ]] &&
        echo root-6.22.06.patch

    echo root-6.22-python-11.patch
    echo root-include_limits.patch
}

function s-root-build-depends()
{
    echo s-cmake
    echo dpkg-dev
}

function s-root-depends()
{
    echo os@-afterimage-dev
    echo os@-cfitsio-dev
    echo os@-fftw3-dev
    echo os@-ftgl-dev
    echo os@-glew-dev
    echo os@-glu1-mesa-dev
    echo os@-graphviz-dev
    echo os@-jpeg-dev
    echo os@-pcre3-dev
    echo os@-png-dev
    echo os@-ssl-dev
    echo os@-uuid-dev
    echo os@-x11-dev
    echo os@-xext-dev
    echo os@-xft-dev
    echo os@-xml2-dev
    echo os@-xpm-dev
    echo os@-xxhash-dev
}

function s-root-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    # proxy needed as some git clone are done during build
    proxy-edf
}

function s-root-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    CLING_STANDARD_PCH none
    set-var    ROOTSYS            $PREFIX

    add-to-var CMAKE_PREFIX_PATH  $PREFIX/lib/cmake
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
    add-to-var PYTHONPATH         $PREFIX/lib
    add-to-var PATH               $PREFIX/bin
}

function s-root-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE Release)
    echo -DPYTHON_EXECUTABLE=$(command -v python3)

    echo -Dgminimal:BOOL=ON
    echo -Dmathmore:BOOL=ON
    echo -Ddataframe:BOOL=ON
    echo -Dmlp:BOOL=ON
    echo -Dfftw3:BOOL=ON
    echo -Dminuit2:BOOL=ON
    echo -Dxml:BOOL=ON
    echo -Dasimage:BOOL=ON
    echo -Dpyroot:BOOL=ON
    echo -Dsoversion:BOOL=ON
    echo -Ddataframe:BOOL=ON
}

function s-root-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS=()
    get-config-options OPTIONS $PREFIX $TARGET $VARIANT

    cmake "${OPTIONS[@]}" ../src
}

function s-root-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-root-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-root-prefix()
{
    echo NONE
}
