
function s-root-vcs()
{
    echo edf
    echo none
    echo git
    echo https://github.com/root-project/root.git
}

function s-root-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo root-$VERSION-src.tar.gz
}

function s-root-build-depends()
{
    echo s-cmake
    echo dpkg-dev
}

function s-root-depends()
{
    echo os@-x11-dev
    echo os@-xpm-dev
    echo os@-xft-dev
    echo os@-xext-dev
    echo os@-png-dev
    echo os@-jpeg-dev
    echo os@-ssl-dev
    echo os@-graphviz-dev
    echo os@-pcre3-dev
    echo os@-glu1-mesa-dev
    echo os@-glew-dev
    echo os@-ftgl-dev
    echo os@-fftw3-dev
    echo os@-cfitsio-dev
    echo os@-uuid-dev
}

function s-root-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    # proxy needed as some git clone are done during build
    proxy-edf
}

function s-root-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    CLING_STANDARD_PCH none
    set-var    ROOTSYS            $PREFIX

    add-to-var CMAKE_PREFIX_PATH  $PREFIX/lib/cmake
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
    add-to-var PYTHONPATH         $PREFIX/lib
    add-to-var PATH               $PREFIX/bin
}

function s-root-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DPYTHON_EXECUTABLE=$(command -v python3) \
          ../src
}

function s-root-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function s-root-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function s-root-prefix()
{
    echo NONE
}
