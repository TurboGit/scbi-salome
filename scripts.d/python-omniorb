
function python-omniorb-vcs() 
{ 
    echo svn 
    echo https://svn.code.sf.net/p/omniorb/svn/trunk/omniORBpy 
} 


function python-omniorb-depends()
{
    echo omniorb
}

function python-omniorb-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var OMNIORBPY_ROOT_DIR $PREFIX
}

function python-omniorb-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure --prefix=$PREFIX --with-omniorb=$OMNIORB_ROOT_DIR \
                     PYTHON=$(which python3)
}

function python-omniorb-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function python-omniorb-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function python-omniorb-prefix()
{
    echo NONE
}
