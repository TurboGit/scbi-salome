# This plan is to build some modules on top of a SALOME binary distribution

@load v912/mpi

[ = linux
        s-salome-bin
        s-paravisaddons-edf
        s-atomic
        s-python3-xlutils
        s-zeromq
        s-melissa
        s-meshgems
        s-zcracks
        s-gnuplot-py
        s-padder
        s-carmel-study
        s-tefluide
        s-paraview
        s-medcoupling
        s-python-modules
        s-ifc-open-shell
        s-building-is

        # other modules that can be built in ng mode
        s-smesh
        s-shaper
        s-salome-kernel
        s-salome-openturns
        s-yacs
        s-adao
        s-geom
        s-persalys
        s-ydefx
        s-salome-gui
        s-salome-jobmanager
        s-paravis
        s-paravisaddons-common
        s-gmsh-plugin
        s-blsurf-plugin
        s-ghs3d-plugin
        s-ghs3dprl-plugin
        s-netgen-plugin
        s-hybrid-plugin
        s-hexotic-plugin
        s-hexablock-plugin
        s-logger
] /+ng-default

#  The version for s-salome-tar has two parts, the version of the code
#  and the version of the OS See tar hook in s-salome-tar for the
#  MinIO download.
#
#  Modules are marked skip below as the variant may introduce an
#  unwanted dependency but yet the configuration need the know about
#  the variant. This is the case for ParaView, for example the ospray
#  variant is set as we need to activate ospray during configuration
#  but the dependency is not needed as provided by the binary archive.

[ = win
        s-salome-configuration/ngwin
        s-cmake/win
        s-visual-c/native
        s-windows-kit/native
        s-salome-bin/ngwin
        s-paravisaddons-edf/ngwin
        s-atomic:skip
        s-salome-tar/ngwin:#9.12.0:WIN
        s-zeromq:skip
        s-melissa:skip
        s-persalys:skip
        s-zcracks:skip
        s-python3-xlutils:skip
        s-zcracks:skip
        s-cgal:skip
        s-padder:skip
        s-tefluide:skip
        s-meshgems:skip
        s-logger/ngwin
]

[
        s-zeromq
        s-ospray
] :skip

[ = deb,9
        s-salome-tar:#9.12.0:DB09
        s-gdal:skip
        s-cgal/ng:#4.0
        s-tbb:skip
        s-qt:skip
        s-pyqt:skip
        s-python-modules/ng.wand.lxml:master
        os@-boost-locale-dev:skip
        os@-python3:skip
        os@-python3-numpy:skip
        os@-python3-xlrd:skip
        os@-python3-xlwt:skip
        os@-python3-setuptools:skip
        os@-boost-dev:skip
        os@-hdf5-dev:skip
        s-boost:skip
]

[ = deb,10
        s-salome-tar:#9.12.0-native:DB10
        s-gdal:skip
        s-qt:skip
        s-pyqt:skip
]

[ = deb,11
        s-salome-tar:#9.12.0-native:DB11
        s-qt/native
        s-pyqt/native
]

[
        s-salome
] /+ng-default
