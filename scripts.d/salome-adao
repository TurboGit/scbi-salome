
function salome-adao-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/salome-adao
}

function salome-adao-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/adao
}

function salome-adao-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo none
    echo salome-adao-$VERSION.tar.xz
}

function salome-adao-build-depends()
{
    echo s-cmake-tool
    echo os@-sphinx-common
}

function salome-adao-depends()
{
    echo os@-python3-docutils
    echo s-omniorb

    echo salome-configuration
    echo salome-kernel
    echo eficas-tools
    echo libbatch
    echo s-python-omniorb
}

function salome-adao-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var LD_LIBRARY_PATH $PREFIX/lib/salome
    add-to-var PYTHONPATH $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function salome-adao-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CURRENT_SOFTWARE_INSTALL_DIR $PREFIX
}

function salome-adao-config()
{
    local PREFIX=$1
    local TARGET=$2

    PSP=lib/python$PYTHON_VERSION/site-packages
    INI=$PSP/salome/adao/daCore/__init__.py

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DADAO_PYTHON_MODULE=OFF \
          -DEFICAS_ROOT_DIR=$EFICAS_ROOT \
          -DKERNEL_ROOT_DIR=$KERNEL_ROOT_DIR \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          -DADAO_PYTHON_ROOT_DIR=$PREFIX \
          -DFILE_OF_ADAO_PYTHON_MODULE=$PREFIX/daComposant/$PSP/$INI \
          -DADAO_SALOME_MODULE=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE salome-adao Release) \
          ../src
}

function salome-adao-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function salome-adao-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function salome-adao-prefix()
{
    echo NONE
}
