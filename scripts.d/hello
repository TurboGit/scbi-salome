
function hello-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/hello
}

function hello-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo HELLO_SRC_$VERSION.tgz
}

function hello-build-depends()
{
    echo os@-cmake
    echo os@-graphviz-dev
    echo os@-graphviz
    echo os@-doxygen
    echo os@-python3-docutils
    echo os@-sphinx-common
    echo os@-sphinx-intl
    echo os@-python3-sphinx
    echo os@-python3-sphinx-rtd-theme
    echo os@-swig
    echo salome-configuration
}

function hello-depends()
{
    echo os@-qt5-default
    echo salome-kernel
    echo salome-gui
}

function hello-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var HELLO_ROOT_DIR $PREFIX
}

function hello-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DKERNEL_ROOT_DIR=$KERNEL_ROOT_DIR \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE hello1 Release) \
          ../src
}

function hello-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function hello-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function hello-prefix()
{
    echo NONE
}
