
function non-regression-tests-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/salome-tests.non_regression_tests.git
}

function non-regression-tests-build-depends()
{
    echo cmake
}

function non-regression-tests-depends()
{
    echo salome-gui
    echo medcoupling
    echo homard
    echo shaper
    echo paravis
    echo geom
    echo smesh
    echo blsurf-plugin
    echo netgen-plugin
    echo ghs3d-plugin
    echo hexotic-plugin
    echo hybrid-plugin

    echo python3-requests
}

function non-regression-tests-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PATH  $PREFIX/bin
}

function non-regression-tests-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DWITH_GUI_TESTS:BOOL=ON \
          -DWITH_CAOMAILLAGE_TESTS:BOOL=ON \
          -DWITH_USECASES_TESTS:BOOL=ON \
          -DWITH_LARGECASES_TESTS:BOOL=ON \
          -DWITH_ARCHITECTURE_TESTS:BOOL=ON \
          -DWITH_MEDCOUPLING_TESTS:BOOL=ON \
          -DWITH_YACS_TESTS:BOOL=OFF \
          -DWITH_PARAVIS_TESTS:BOOL=ON \
          -DWITH_SHAPER_TESTS:BOOL=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE non-regression-tests Release) \
           ../src
}

function non-regression-tests-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function non-regression-tests-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function non-regression-tests-prefix()
{
    echo NONE
}
