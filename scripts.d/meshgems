
function meshgems-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo MeshGems_$VERSION.tar.gz
}

function meshgems-env()
{
    export MESHGEMS_ROOT_DIR=$IDIR
}

function meshgems-install()
{
    local PREFIX=$1
    local TARGET=$2


    # this is no installation for this tool, yet we do copy all
    # sources into install directory which seems cleaner.

    cd ..
    rsync -a --delete src/MeshGems*/Products/. install
}
