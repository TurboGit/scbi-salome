
function meshgems-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo MeshGems_$VERSION.tar.gz
}

function meshgems-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var MESHGEMS_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib/Linux_64
    add-to-var PATH              $PREFIX/bin
    add-to-var PATH              $PREFIX/bin/Linux_64

    # and the DISTENE license
    LICENSE_FILE="\"Use global envvar: DLIM8VAR\""
    add-to-var DISTENE_LICENSE_FILE "$LICENSE_FILE"
    add-to-var DLIM8VAR "\"dlim8 $(scbi-store-get-key DLIM8)\""
    add-to-var DISTENE_LICENCE_FILE_FOR_YAMS "$LICENSE_FILE"
    add-to-var DISTENE_LICENCE_FILE_FOR_MGCLEANER "$LICENSE_FILE"
}

function meshgems-out-of-tree()
{
    echo false
}

function meshgems-install()
{
    local PREFIX=$1
    local TARGET=$2

    # this is no installation for this tool, yet we do copy all
    # sources into install directory which seems cleaner.

    cd ..
    rsync -a --delete src/MeshGems*/Products*/. install
}

function meshgems-prefix()
{
    echo NONE
}
