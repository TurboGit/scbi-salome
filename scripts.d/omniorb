
function omniorb-vcs()
{
    echo default
    echo none
    echo svn
    echo https://svn.code.sf.net/p/omniorb/svn/trunk/omniORB
}

function omniorb-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo omniORB-$VERSION.tar.gz
}

function omniorb-depends()
{
    echo python3-dev
}

function omniorb-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var OMNIORB_ROOT_DIR   $PREFIX
    add-to-var C_INCLUDE_PATH     $PREFIX/include
    add-to-var CPLUS_INCLUDE_PATH $PREFIX/include
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib
    add-to-var PATH               $PREFIX/bin
}

function omniorb-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure PYTHON=/usr/bin/python3 --prefix=$PREFIX
}

function omniorb-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function omniorb-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function omniorb-prefix()
{
    echo NONE
}
