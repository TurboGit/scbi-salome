
function omniorb-vcs()
{
    echo svn
    echo https://svn.code.sf.net/p/omniorb/svn/trunk/omniORB
}

function omniorb-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/prerequis
    echo omniORB-$VERSION.tar.gz
}

function omniorb-out-of-tree()
{
    echo true
}

function omniorb-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var OMNIORB_ROOT_DIR $PREFIX
}

function omniorb-config()
{
    local PREFIX=$1
    local TARGET=$2

    ../src/configure --prefix=$PREFIX
}

function omniorb-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function omniorb-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
