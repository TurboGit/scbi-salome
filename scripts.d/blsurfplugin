

function blsurfplugin-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo blsurfplugin-$VERSION.tar.xz 
} 

function blsurfplugin-depends()
{
    echo cmake
    echo sphinx-common
    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo geom
    echo smesh
    echo meshgems
}

function blsurfplugin-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var BLSURFPLUGIN_ROOT_DIR $PREFIX
}

function blsurfplugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_GUI_BUILD_WITH_QT5=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE blsurfplugin Release) \
          ../src
}

function blsurfplugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function blsurfplugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function blsurfplugin-prefix()
{
    echo NONE
}
