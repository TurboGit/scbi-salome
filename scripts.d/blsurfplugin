

function blsurfplugin-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo blsurfplugin-$VERSION.tar.xz 
} 

function blsurfplugin-depends()
{
    echo cmake
    echo configuration
    echo kernel
    echo gui
    echo geom
    echo smesh
    echo meshgems
}

function blsurfplugin-env()
{
    add-to-var BLSURFPLUGIN_ROOT_DIR $IDIR
}

function blsurfplugin-out-of-tree()
{
    echo true
}

function blsurfplugin-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DSALOME_BUILD_DOC=OFF \
          -DCMAKE_BUILD_TYPE=Release \
          ../src
}

function blsurfplugin-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function blsurfplugin-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}
