


function genericsolver-build-depends()
{
    echo os@-cmake
    echo os@-swig
    echo salome-configuration
}

function genericsolver-depends()
{
    echo salome-kernel
    echo salome-gui
}

function genericsolver-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var GENERICSOLVER_INSTALL_DIR  $PREFIX
}

function genericsolver-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE genericsolver Release) \
          ../src
}

function genericsolver-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function genericsolver-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function genericsolver-prefix()
{
    echo NONE
}
