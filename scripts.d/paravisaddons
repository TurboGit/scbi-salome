
function paravisaddons-vcs()
{
    echo git
    echo https://git.forge.pleiade.edf.fr/git/paravisaddons
}

function paravisaddons-depends()
{
    echo cmake
    echo configuration
    echo medcoupling
    echo medfichier
    echo paravis
    echo hdf5
}

function paravisaddons-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PARAVISADDONS_ROOT_DIR $PREFIX
}

function paravisaddons-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=Release \
          \
          -DHDF5_LIBRARIES=$HDF5_LIBRARIES \
          -DHDF5_INCLUDE_DIRS=$HDF5_INCLUDE_DIRS \
          ../src
}

function paravisaddons-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$JOBS
}

function paravisaddons-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function paravisaddons-prefix()
{
    echo NONE
}
