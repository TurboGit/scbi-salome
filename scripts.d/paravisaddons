
function paravisaddons-vcs()
{
    echo default
    echo none
    echo git
    echo https://git.forge.pleiade.edf.fr/git/paravisaddons
}

function paravisaddons-common-build-depends()
{
    echo s-cmake-tool
}

function paravisaddons-common-depends()
{
    echo salome-configuration
}

function paravisaddons-default-depends()
{
    echo s-hdf5

    echo medcoupling
    echo medfichier
    echo paravis
}

function paravisaddons-win-build-depends()
{
    echo s-visual-c
    echo s-salome-bin
}

function paravisaddons-win-depends()
{
    true
}

function paravisaddons-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PARAVISADDONS_ROOT_DIR $PREFIX
    add-to-var PV_PLUGIN_PATH         $PREFIX/lib
    add-to-var LD_LIBRARY_PATH        $PREFIX/lib
}

function paravisaddons-common-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local CDEBUG=$(is-enabled cmake-debug)

    echo -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE paravisaddons Release)
    echo ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"}
    echo -DMEDCOUPLING_USE_64BIT_IDS=ON
    echo -DPARAVIEW_PLUGIN_ENABLE_pqEDFVisuClusterServerLauncher=YES

    echo -DHDF5_LIBRARIES="$HDF5_LIBRARIES"
    echo -DHDF5_INCLUDE_DIRS="$HDF5_INCLUDE_DIRS"
}

function paravisaddons-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INSTALL_PREFIX=$PREFIX
}

function paravisaddons-win-config-options()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    echo -DCMAKE_INSTALL_PREFIX=$(cygpath -w "$PREFIX")

    echo -DCONFIGURATION_ROOT_DIR=$(cygpath -w $CONFIGURATION_ROOT_DIR)

    echo -DPython3_EXECUTABLE="$Python3_EXECUTABLE"
    echo -DPython3_LIBRARIES="$Python3_LIBRARIES"
    echo -DPython3_INCLUDE_DIRS="$Python3_INCLUDE_DIRS"

    echo -DLIBXML2_LIBRARY="$LIBXML2_LIBRARY"
    echo -DFREETYPE_LIBRARY="$FREETYPE_LIBRARY"
    echo -DZLIB_LIBRARY="$ZLIB_LIBRARY"
    echo -DCGNS_LIBRARY="$CGNS_LIBRARY"
}

function paravisaddons-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake $OPTIONS ../src
}

function paravisaddons-win-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    cmake -G "NMake Makefiles" $OPTIONS ../src
}

function paravisaddons-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function paravisaddons-win-build()
{
    local PREFIX=$1
    local TARGET=$2

    nmake
}

function paravisaddons-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function paravisaddons-win-install()
{
    local PREFIX=$1
    local TARGET=$2

    nmake install
}

function paravisaddons-prefix()
{
    echo NONE
}
