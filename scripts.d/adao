

function adao-tar() 
{ 
    local VERSION=$1 
 
    echo default 
    echo none 
    echo none 
    echo adao-$VERSION.tar.xz 
} 

function adao-build-depends()
{
    echo os@-cmake
    echo os@-sphinx-common
    echo os@-sphinx-intl
}

function adao-depends()
{
    echo os@-python3-sphinx-rtd-theme
    echo salome-configuration
    echo os@-python3-matplotlib
    echo s-python3-nlopt
    echo os@-python3-scipy
}

function adao-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PYTHONPATH $PREFIX/lib/python$PYTHON_VERSION/site-packages
    add-to-var ADAO_ENGINE_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH      $PREFIX/lib
}

function adao-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var CURRENT_SOFTWARE_INSTALL_DIR $PREFIX
}

function adao-config()
{
    local PREFIX=$1
    local TARGET=$2

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE adao Release) \
          -DPYTHON_EXECUTABLE=$(which python$PYTHON_VERSION) \
          ../src
}

function adao-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function adao-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function adao-prefix()
{
    echo NONE
}
