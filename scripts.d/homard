
function homard-vcs()
{
    echo default
    echo none
    echo git
    echo https://gitlab.pleiade.edf.fr/salome/homard
}

function homard-cea-vcs()
{
    echo edf
    echo none
    echo git
    echo https://codev-tuleap.cea.fr/plugins/git/salome/homard
}

function homard-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo http://ftp.pleiade.edf.fr/projets/YAMM/Public/SALOME/sources/modules
    echo HOMARD_SRC_$VERSION.tgz
}

function homard-build-depends()
{
    echo s-cmake-tool
    echo os@-sphinx-common
}

function homard-depends()
{
    echo os@-qt5-default
    echo os@-python3-pyqt5
    echo os@-python3-sip-dev

    echo salome-configuration
    echo salome-kernel
    echo salome-gui
    echo medfichier
    echo medcoupling
    echo geom
    echo smesh
}

function homard-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var HOMARD_ROOT_DIR    $PREFIX
    add-to-var LD_LIBRARY_PATH    $PREFIX/lib/salome
    add-to-var PYTHONPATH         \
               $PREFIX/lib/python$PYTHON_VERSION/site-packages/salome
}

function homard-config()
{
    local PREFIX=$1
    local TARGET=$2

    local CDEBUG=$(is-enabled cmake-debug)
    local DISDOC=$(is-enabled no-doc)

    cmake -DCMAKE_INSTALL_PREFIX=$PREFIX -DSALOME_GUI_BUILD_WITH_QT5=ON \
          -DCMAKE_BUILD_TYPE=$(get-build-type CMAKE homard Release) \
          ${CDEBUG:+"-DSALOME_CMAKE_DEBUG=ON"} \
          ${DISDOC:+"-DSALOME_BUILD_DOC=OFF"} \
          ../src
}

function homard-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j$SCBI_JOBS
}

function homard-install()
{
    local PREFIX=$1
    local TARGET=$2

    make install
}

function homard-post-install()
{
    local PREFIX=$1
    local TARGET=$2

    # When building the documentation the .py & .med have been downloaded
    # by sphinx. We need the fr artifacts to be on top of the _downloads
    # directory for the tests to pass.

    cd ../install

    local DDIR=share/doc/salome/gui/HOMARD/fr/_downloads/

    if [ -d $DDIR ]; then
        (
            cd $DDIR
            for dir in $(ls -d *); do
                ln -s $dir/* .
            done
        )
    fi
}

function homard-prefix()
{
    echo NONE
}
