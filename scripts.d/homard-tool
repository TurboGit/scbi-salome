
function homard-tool-tar()
{
    local VERSION=$1

    echo default
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/tools/bin64
    echo Homard-$VERSION.tgz
}

function homard-tool-out-of-tree()
{
    echo false
}

function homard-tool-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var HOMARD_REP_EXE $PREFIX
    add-to-var HOMARD_EXE     homard
}

function homard-tool-install()
{
    local PREFIX=$1
    local TARGET=$2

    # this is no installation for this tool, yet we do copy all
    # sources into install directory which seems cleaner.

    cd ..
    rsync -a --delete src/. install
}

function homard-tool-prefix()
{
    echo NONE
}
